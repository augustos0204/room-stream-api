<!-- Header Component -->
<header class="fixed top-0 w-full dark-glass z-50 shadow-2xl" role="banner">
    <div class="flex justify-between items-center px-6 py-3">
        <!-- Logo RoomStream -->
        <div class="flex items-center gap-3 animate-float">
            <div class="logo-icon relative w-10 h-10">
                <%- include('../partials/logo-svg') %>
            </div>
            <div class="flex flex-col">
                <h1 class="text-xl font-bold bg-gradient-to-r from-blue-400 via-purple-400 to-cyan-400 bg-clip-text text-transparent">
                    <%= appName || 'RoomStream' %>
                </h1>
                <span class="text-xs text-gray-400 -mt-1">WebSocket Tester</span>
            </div>
        </div>

        <!-- Desktop Controls - Right Aligned -->
        <div class="hidden lg:flex items-center gap-2 flex-1 justify-end">
            <!-- Expandable Inputs Container -->
            <div class="flex items-center gap-2 mr-2">
                <!-- API Key Input -->
                <div x-show="configExpanded.apiKey"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 transform scale-x-0"
                     x-transition:enter-end="opacity-100 transform scale-x-100"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 transform scale-x-100"
                     x-transition:leave-end="opacity-0 transform scale-x-0"
                     class="origin-right">
                    <input x-model="apiKey"
                           type="password"
                           placeholder="API Key (opcional)"
                           class="w-64 bg-purple-900/30 text-white px-3 py-2 rounded-lg border border-purple-500/50 focus:border-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-400/20 transition-all text-sm backdrop-blur-sm">
                </div>

                <!-- Base URL Input -->
                <div x-show="configExpanded.baseUrl"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 transform scale-x-0"
                     x-transition:enter-end="opacity-100 transform scale-x-100"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 transform scale-x-100"
                     x-transition:leave-end="opacity-0 transform scale-x-0"
                     class="origin-right">
                    <input x-model="baseUrl"
                           type="text"
                           placeholder="http://localhost:3000"
                           class="w-64 bg-blue-900/30 text-white px-3 py-2 rounded-lg border border-blue-500/50 focus:border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-400/20 transition-all text-sm backdrop-blur-sm">
                </div>

                <!-- Namespace Input -->
                <div x-show="configExpanded.namespace"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 transform scale-x-0"
                     x-transition:enter-end="opacity-100 transform scale-x-100"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 transform scale-x-100"
                     x-transition:leave-end="opacity-0 transform scale-x-0"
                     class="origin-right">
                    <input x-model="wsNamespace"
                           type="text"
                           placeholder="/ws/rooms"
                           class="w-48 bg-cyan-900/30 text-white px-3 py-2 rounded-lg border border-cyan-500/50 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all text-sm backdrop-blur-sm">
                </div>
            </div>

            <!-- Config Buttons -->
            <div class="flex items-center gap-2">
                <% if (features.supabaseAuth) { %>
                <!-- Supabase Login Button -->
                <button @click="showSupabaseModal = true"
                        class="p-2 rounded-lg transition-all duration-200 transform hover:scale-105 active:scale-95"
                        :class="supabaseToken ? 'bg-green-600 text-white shadow-lg shadow-green-500/50' : 'bg-gray-700/50 text-gray-300 hover:bg-gray-600/50 hover:text-white'"
                        title="Login Supabase">
                    <i data-lucide="user-check" class="w-4 h-4"></i>
                </button>
                <% } %>

                <!-- API Key Button -->
                <button @click="configExpanded.apiKey = !configExpanded.apiKey"
                        class="p-2 rounded-lg transition-all duration-200 transform hover:scale-105 active:scale-95"
                        :class="configExpanded.apiKey ? 'bg-purple-600 text-white shadow-lg shadow-purple-500/50' : 'bg-gray-700/50 text-gray-300 hover:bg-gray-600/50 hover:text-white'"
                        title="API Key">
                    <i data-lucide="key" class="w-4 h-4"></i>
                </button>

                <!-- Base URL Button -->
                <button @click="configExpanded.baseUrl = !configExpanded.baseUrl"
                        class="p-2 rounded-lg transition-all duration-200 transform hover:scale-105 active:scale-95"
                        :class="configExpanded.baseUrl ? 'bg-blue-600 text-white shadow-lg shadow-blue-500/50' : 'bg-gray-700/50 text-gray-300 hover:bg-gray-600/50 hover:text-white'"
                        title="Base URL">
                    <i data-lucide="server" class="w-4 h-4"></i>
                </button>

                <!-- Namespace Button -->
                <button @click="configExpanded.namespace = !configExpanded.namespace"
                        class="p-2 rounded-lg transition-all duration-200 transform hover:scale-105 active:scale-95"
                        :class="configExpanded.namespace ? 'bg-cyan-600 text-white shadow-lg shadow-cyan-500/50' : 'bg-gray-700/50 text-gray-300 hover:bg-gray-600/50 hover:text-white'"
                        title="WebSocket Namespace">
                    <i data-lucide="radio" class="w-4 h-4"></i>
                </button>
            </div>

            <!-- Connect Button -->
            <button @click="toggleConnection()"
                    class="relative px-4 py-2 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 active:scale-95 text-sm flex-shrink-0"
                    :class="isConnected ? 'bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 shadow-lg shadow-red-500/25' : 'bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 shadow-lg shadow-emerald-500/25'">
                <span class="flex items-center gap-2">
                    <i :data-lucide="isConnected ? 'wifi-off' : 'wifi'" class="w-4 h-4"></i>
                    <span x-text="isConnected ? 'Disconnect' : 'Connect'"></span>
                </span>
                <div x-show="connecting" class="absolute inset-0 flex items-center justify-center bg-gray-600/90 rounded-lg backdrop-blur-sm">
                    <div class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                </div>
            </button>
        </div>

        <!-- Mobile Controls -->
        <div class="lg:hidden flex items-center gap-2">
            <!-- URL Config Button for Mobile -->
            <button @click="urlInputExpanded = !urlInputExpanded"
                    class="p-2 rounded-lg transition-all transform hover:scale-105 active:scale-95"
                    :class="urlInputExpanded ? 'bg-purple-600 text-white shadow-lg shadow-purple-500/50' : 'bg-gray-700/50 hover:bg-gray-600/50 text-gray-300 hover:text-white'"
                    title="Configurar URL do WebSocket">
                <i data-lucide="settings" class="w-4 h-4"></i>
            </button>

            <% if (features.supabaseAuth) { %>
            <!-- Supabase Login Button Mobile -->
            <button @click="showSupabaseModal = true"
                    class="p-2 rounded-lg transition-all transform hover:scale-105 active:scale-95"
                    :class="supabaseToken ? 'bg-green-600 text-white shadow-lg shadow-green-500/50' : 'bg-gray-700/50 hover:bg-gray-600/50 text-gray-300 hover:text-white'"
                    title="Login Supabase">
                <i data-lucide="user-check" class="w-4 h-4"></i>
            </button>
            <% } %>

            <!-- Connect Button Mobile -->
            <button @click="toggleConnection()"
                    class="relative p-2 rounded-lg transition-all duration-300 transform hover:scale-105 active:scale-95"
                    :class="isConnected ? 'bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 shadow-lg shadow-red-500/25' : 'bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 shadow-lg shadow-blue-500/25'">
                <i :data-lucide="isConnected ? 'wifi-off' : 'wifi'" class="w-4 h-4"></i>
                <div x-show="connecting" class="absolute inset-0 flex items-center justify-center bg-gray-600/90 rounded-lg backdrop-blur-sm">
                    <div class="w-3 h-3 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                </div>
            </button>
        </div>
    </div>

    <!-- Mobile Expanded URL Input -->
    <div x-show="urlInputExpanded"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 transform scale-95"
         x-transition:enter-end="opacity-100 transform scale-100"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100 transform scale-100"
         x-transition:leave-end="opacity-0 transform scale-95"
         class="lg:hidden px-6 py-3 space-y-3 border-b border-gray-700/50">

        <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-300">Configurar Conex√£o</span>
        </div>

        <!-- API Key Input -->
        <div class="flex items-center gap-2">
            <i data-lucide="key" class="w-4 h-4 text-purple-400 flex-shrink-0"></i>
            <input x-model="apiKey"
                   type="password"
                   placeholder="API Key (opcional)"
                   @keydown.escape="urlInputExpanded = false"
                   class="flex-1 bg-gray-800/50 text-white px-3 py-2 rounded-lg border border-gray-600 focus:border-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-400/20 transition-all text-sm">
        </div>

        <!-- Base URL Input -->
        <div class="flex items-center gap-2">
            <i data-lucide="server" class="w-4 h-4 text-blue-400 flex-shrink-0"></i>
            <input x-model="baseUrl"
                   type="text"
                   placeholder="Base URL (ex: http://localhost:3000)"
                   @keydown.escape="urlInputExpanded = false"
                   class="flex-1 bg-gray-800/50 text-white px-3 py-2 rounded-lg border border-gray-600 focus:border-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-400/20 transition-all text-sm">
        </div>

        <!-- WebSocket Path Input -->
        <div class="flex items-center gap-2">
            <i data-lucide="radio" class="w-4 h-4 text-cyan-400 flex-shrink-0"></i>
            <input x-model="wsNamespace"
                   x-ref="urlInput"
                   type="text"
                   placeholder="/ws/rooms"
                   @keydown.escape="urlInputExpanded = false"
                   @keydown.enter="urlInputExpanded = false"
                   class="flex-1 bg-gray-800/50 text-white px-3 py-2 rounded-lg border border-gray-600 focus:border-cyan-400 focus:outline-none focus:ring-2 focus:ring-cyan-400/20 transition-all text-sm">
        </div>

        <!-- Connect Button -->
        <button @click="toggleConnection(); urlInputExpanded = false"
                class="w-full relative px-4 py-2 rounded-lg font-semibold transition-all duration-300 text-sm"
                :class="isConnected ? 'bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 shadow-lg shadow-red-500/25' : 'bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 shadow-lg shadow-blue-500/25'">
            <span class="flex items-center justify-center gap-2">
                <i :data-lucide="isConnected ? 'wifi-off' : 'wifi'" class="w-4 h-4"></i>
                <span x-text="isConnected ? 'Desconectar' : 'Conectar'"></span>
            </span>
        </button>
    </div>
</header>

                                    <p class="text-xs text-gray-500 mt-2 flex items-center gap-1">
                                        <i data-lucide="hard-drive" class="w-3 h-3"></i>
                                        Salva localmente no navegador
                                    </p>
                                </div>

                                <!-- Change API Key Button -->
                                <button
                                    @click="showChangeApiKeyForm = !showChangeApiKeyForm"
                                    class="w-full flex items-center justify-between p-3 bg-gray-800/40 hover:bg-gray-800/60 rounded-lg border border-gray-700/50 transition-all"
                                >
                                    <div class="flex items-center gap-2">
                                        <i data-lucide="refresh-cw" class="w-4 h-4 text-gray-400"></i>
                                        <span class="text-sm text-gray-300">Alterar API Key</span>
                                    </div>
                                    <i data-lucide="chevron-down" class="w-4 h-4 text-gray-400 transition-transform" :class="showChangeApiKeyForm && 'rotate-180'"></i>
                                </button>

                                <!-- Change API Key Form (Collapsible) -->
                                <div x-show="showChangeApiKeyForm"
                                     x-transition:enter="transition ease-out duration-200"
                                     x-transition:enter-start="opacity-0 transform scale-95"
                                     x-transition:enter-end="opacity-100 transform scale-100"
                                     x-transition:leave="transition ease-in duration-150"
                                     x-transition:leave-start="opacity-100 transform scale-100"
                                     x-transition:leave-end="opacity-0 transform scale-95"
                                     class="p-4 bg-gray-900/50 rounded-lg border border-gray-700/50">
                                    <form @submit.prevent="handleChangeApiKey()" class="space-y-4">
                                        <div>
                                            <label for="newApiKey" class="block text-xs text-gray-400 mb-2">
                                                Nova API Key
                                            </label>
                                            <input
                                                id="newApiKey"
                                                type="password"
                                                x-model="newApiKeyInput"
                                                placeholder="Digite a nova API Key"
                                                class="w-full bg-gray-800/50 border border-gray-700 rounded-lg px-3 py-2 text-white text-sm placeholder-gray-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500/50 transition-all font-mono"
                                                required
                                            />
                                        </div>

                                        <div class="flex gap-2">
                                            <button
                                                type="submit"
                                                class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-lg font-medium text-white text-sm transition-colors flex items-center justify-center gap-2"
                                            >
                                                <i data-lucide="check" class="w-4 h-4"></i>
                                                <span>Confirmar</span>
                                            </button>
                                            <button
                                                type="button"
                                                @click="showChangeApiKeyForm = false; newApiKeyInput = ''"
                                                class="px-4 py-2 bg-gray-700/50 hover:bg-gray-700 rounded-lg font-medium text-gray-300 text-sm transition-colors"
                                            >
                                                Cancelar
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                </div>

                                <!-- Logout Button -->
                                <div class="pt-2">
                                    <button
                                        @click="handleApiKeyLogout()"
                                        class="w-full px-6 py-3 bg-red-600/20 hover:bg-red-600/30 border border-red-700/50 rounded-lg font-medium text-red-400 transition-all duration-200 flex items-center justify-center gap-2"
                                    >
                                        <i data-lucide="log-out" class="w-4 h-4"></i>
                                        <span>Sair da Conta</span>
                                    </button>
                                </div>
                            </div>

                            <!-- RIGHT COLUMN: Stats & Connection -->
                            <div class="space-y-6">

                                <!-- Statistics Section -->
                                <div class="space-y-3">
                                    <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider flex items-center gap-2">
                                        <i data-lucide="bar-chart-3" class="w-4 h-4"></i>
                                        Estat√≠sticas
                                    </h3>
                                    <div class="grid grid-cols-3 gap-3">
                                        <div class="p-3 bg-gray-800/40 rounded-lg text-center border border-gray-700/50">
                                            <p class="text-2xl font-bold text-white" x-text="stats.myActiveRooms.length"></p>
                                            <p class="text-xs text-gray-400 mt-1">Salas Ativas</p>
                                        </div>
                                        <div class="p-3 bg-gray-800/40 rounded-lg text-center border border-gray-700/50">
                                            <p class="text-2xl font-bold text-white" x-text="stats.totalParticipants"></p>
                                            <p class="text-xs text-gray-400 mt-1">Participantes</p>
                                        </div>
                                        <div class="p-3 bg-gray-800/40 rounded-lg text-center border border-gray-700/50">
                                            <p class="text-2xl font-bold text-white" x-text="activeRooms.length"></p>
                                            <p class="text-xs text-gray-400 mt-1">Abas Abertas</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Connection Info -->
                                <div class="space-y-3">
                                    <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider flex items-center gap-2">
                                        <i data-lucide="activity" class="w-4 h-4"></i>
                                        Conex√£o
                                    </h3>

                                    <div class="flex items-center justify-between p-3 bg-gray-800/40 rounded-lg border border-gray-700/50">
                                        <span class="text-sm text-gray-400">Status WebSocket</span>
                                        <div class="flex items-center gap-2">
                                            <div class="w-2 h-2 rounded-full" :class="isConnected ? 'bg-green-400 animate-pulse' : 'bg-red-400'"></div>
                                            <span class="text-sm font-medium" :class="isConnected ? 'text-green-400' : 'text-red-400'"
                                                  x-text="isConnected ? 'Conectado' : 'Desconectado'"></span>
                                        </div>
                                    </div>

                                    <template x-if="isConnected && socket">
                                        <div class="flex items-center justify-between p-3 bg-gray-800/40 rounded-lg border border-gray-700/50">
                                            <div class="flex-1 min-w-0">
                                                <p class="text-xs text-gray-400 mb-1">Socket ID</p>
                                                <p class="text-sm text-white font-mono truncate" x-text="socket.id"></p>
                                            </div>
                                            <button
                                                @click="navigator.clipboard.writeText(socket.id).then(() => Toast.success('Socket ID copiado!'))"
                                                class="ml-3 p-2 hover:bg-gray-700/50 rounded-lg transition-colors group"
                                                title="Copiar Socket ID"
                                            >
                                                <i data-lucide="copy" class="w-4 h-4 text-gray-400 group-hover:text-white"></i>
                                            </button>
                                        </div>
                                    </template>

                                    <div class="flex items-center justify-between p-3 bg-gray-800/40 rounded-lg border border-gray-700/50">
                                        <span class="text-sm text-gray-400">Namespace</span>
                                        <span class="text-sm text-white font-mono" x-text="wsNamespace"></span>
                                    </div>
                                </div>
                            </div>

                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </template>
    </div>
</div>

    <!-- Geometric Flow Alpine Component -->
    <script>
        function geometricFlow() {
            const shapeTypes = ['triangle', 'square', 'circle', 'diamond', 'plus', 'dot', 'hexagon'];
            
            // Ajusta quantidade baseado no tamanho da tela
            const isMobile = window.innerWidth < 768;
            const isTablet = window.innerWidth >= 768 && window.innerWidth < 1024;
            
            let shapesPerType;
            let updateInterval;
            let shapesPerUpdate;
            
            if (isMobile) {
                shapesPerType = 8;      // 56 formas total no mobile
                updateInterval = 1200;   // Atualiza mais devagar
                shapesPerUpdate = [2, 4]; // 2-4 formas por ciclo
            } else if (isTablet) {
                shapesPerType = 15;     // 105 formas total no tablet
                updateInterval = 1000;
                shapesPerUpdate = [2, 6]; // 2-6 formas por ciclo
            } else {
                shapesPerType = 30;     // 210 formas total no desktop
                updateInterval = 800;
                shapesPerUpdate = [3, 10]; // 3-10 formas por ciclo
            }
            
            function createShape(id, type) {
                return {
                    id,
                    type,
                    x: Math.random() * 90 + 5,
                    y: Math.random() * 90 + 5,
                    baseOpacity: (Math.random() * 0.3 + 0.15).toFixed(2),
                    floatDuration: Math.random() * 8 + 6, // 6-14s
                    spinDuration: Math.random() * 40 + 30, // 30-70s (bem devagar)
                    spinReverse: Math.random() > 0.5,
                    visible: true,
                };
            }
            
            // Criar formas iniciais
            const shapes = [];
            let idCounter = 0;
            shapeTypes.forEach(type => {
                for (let i = 0; i < shapesPerType; i++) {
                    const shape = createShape(idCounter++, type);
                    // Delay inicial aleatório para não aparecerem todas juntas
                    shape.visible = Math.random() > 0.3;
                    shapes.push(shape);
                }
            });
            
            return {
                shapes,
                idCounter,
                
                startLifecycle() {
                    setInterval(() => {
                        const numToUpdate = Math.floor(Math.random() * (shapesPerUpdate[1] - shapesPerUpdate[0] + 1)) + shapesPerUpdate[0];
                        
                        for (let i = 0; i < numToUpdate; i++) {
                            const randomIndex = Math.floor(Math.random() * this.shapes.length);
                            const shape = this.shapes[randomIndex];
                            
                            if (shape.visible) {
                                // Começar fade out
                                shape.visible = false;
                                
                                // Após fade out, reposicionar e fade in
                                setTimeout(() => {
                                    shape.x = Math.random() * 90 + 5;
                                    shape.y = Math.random() * 90 + 5;
                                    shape.floatDuration = Math.random() * 8 + 6;
                                    shape.spinDuration = Math.random() * 40 + 30;
                                    shape.spinReverse = Math.random() > 0.5;
                                    shape.baseOpacity = (Math.random() * 0.3 + 0.15).toFixed(2);
                                    
                                    // Pequeno delay antes de reaparecer
                                    setTimeout(() => {
                                        shape.visible = true;
                                    }, Math.random() * 1000 + 500);
                                }, 1500); // Tempo do fade out
                            }
                        }
                    }, updateInterval);
                }
            };
        }
    </script>


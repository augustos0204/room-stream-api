<!-- Dashboard Page -->
<div class="space-y-6 animate-fade-in">

    <!-- Welcome Section -->
    <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-6 md:p-8">
        <div class="flex items-center gap-3 sm:gap-4 mb-4">
            <div class="w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 rounded-full bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center flex-shrink-0 animate-float">
                <i data-lucide="bar-chart-3" class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 text-white"></i>
            </div>
            <div class="flex-1 min-w-0">
                <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-white">Dashboard</h1>
                <p class="text-sm sm:text-base text-gray-400 truncate">Visão geral do sistema RoomStream</p>
            </div>
        </div>
        <div class="flex items-center gap-2 text-xs sm:text-sm text-gray-500 flex-wrap">
            <i data-lucide="clock" class="w-4 h-4 flex-shrink-0"></i>
            <span class="whitespace-nowrap">Última atualização:</span>
            <span class="font-medium" x-text="lastMetricsUpdate ? lastMetricsUpdate.toLocaleTimeString('pt-BR') : 'Carregando...'"></span>
        </div>
    </div>

    <!-- Metrics Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">

        <!-- Total Connections -->
        <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6 hover:border-blue-500/50 transition-all duration-300">
            <div class="flex items-center justify-between mb-3 sm:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-blue-600/20 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="wifi" class="w-5 h-5 sm:w-6 sm:h-6 text-blue-400"></i>
                </div>
                <span class="px-2 py-1 bg-blue-600/20 text-blue-400 rounded-full text-xs font-medium whitespace-nowrap">Total</span>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-1" x-text="metrics.connections?.total || 0"></h3>
            <p class="text-xs sm:text-sm text-gray-400">Conexões (Total)</p>
            <div class="mt-2 sm:mt-3 pt-2 sm:pt-3 border-t border-gray-700/50">
                <div class="flex items-center gap-2 text-xs">
                    <span class="text-gray-500">Ativas:</span>
                    <span class="font-semibold text-blue-400" x-text="metrics.connections?.active || 0"></span>
                </div>
            </div>
        </div>

        <!-- Total Rooms -->
        <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6 hover:border-purple-500/50 transition-all duration-300">
            <div class="flex items-center justify-between mb-3 sm:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-purple-600/20 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="layout-grid" class="w-5 h-5 sm:w-6 sm:h-6 text-purple-400"></i>
                </div>
                <span class="px-2 py-1 bg-purple-600/20 text-purple-400 rounded-full text-xs font-medium whitespace-nowrap">Salas</span>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-1" x-text="metrics.rooms?.total || 0"></h3>
            <p class="text-xs sm:text-sm text-gray-400">Salas Criadas</p>
            <div class="mt-2 sm:mt-3 pt-2 sm:pt-3 border-t border-gray-700/50">
                <div class="flex items-center gap-2 text-xs">
                    <span class="text-gray-500">Ativas:</span>
                    <span class="font-semibold text-purple-400" x-text="metrics.rooms?.active || 0"></span>
                </div>
            </div>
        </div>

        <!-- Total Messages -->
        <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6 hover:border-green-500/50 transition-all duration-300">
            <div class="flex items-center justify-between mb-3 sm:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-green-600/20 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="message-circle" class="w-5 h-5 sm:w-6 sm:h-6 text-green-400"></i>
                </div>
                <span class="px-2 py-1 bg-green-600/20 text-green-400 rounded-full text-xs font-medium whitespace-nowrap">Mensagens</span>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-1" x-text="metrics.messages?.total || 0"></h3>
            <p class="text-xs sm:text-sm text-gray-400">Mensagens Enviadas</p>
            <div class="mt-2 sm:mt-3 pt-2 sm:pt-3 border-t border-gray-700/50">
                <div class="flex items-center gap-2 text-xs text-gray-500">
                    <i data-lucide="trending-up" class="w-3 h-3"></i>
                    <span class="truncate">Todas as salas</span>
                </div>
            </div>
        </div>

        <!-- Uptime -->
        <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6 hover:border-yellow-500/50 transition-all duration-300">
            <div class="flex items-center justify-between mb-3 sm:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-yellow-600/20 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="clock" class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-400"></i>
                </div>
                <span class="px-2 py-1 bg-yellow-600/20 text-yellow-400 rounded-full text-xs font-medium whitespace-nowrap">Uptime</span>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-1" x-text="metrics.uptime?.formatted || '0s'"></h3>
            <p class="text-xs sm:text-sm text-gray-400">Tempo Ativo</p>
            <div class="mt-2 sm:mt-3 pt-2 sm:pt-3 border-t border-gray-700/50">
                <div class="flex items-center gap-2 text-xs">
                    <span class="text-gray-500">Segundos:</span>
                    <span class="font-semibold text-yellow-400" x-text="metrics.uptime?.seconds || 0"></span>
                </div>
            </div>
        </div>

    </div>

    <!-- System Status & Quick Actions -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6">

        <!-- System Status -->
        <div class="lg:col-span-2 dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6">
            <div class="flex items-center gap-3 mb-6">
                <i data-lucide="activity" class="w-5 h-5 text-green-400"></i>
                <h2 class="text-xl font-bold text-white">Status do Sistema</h2>
            </div>

            <div class="space-y-4">
                <!-- WebSocket Status -->
                <div class="flex items-center justify-between p-4 bg-gray-800/40 rounded-lg">
                    <div class="flex items-center gap-3">
                        <div class="w-3 h-3 rounded-full"
                             :class="isConnected ? 'bg-green-500 animate-pulse' : 'bg-gray-500'"></div>
                        <div>
                            <p class="text-sm font-medium text-white">WebSocket</p>
                            <p class="text-xs text-gray-400">Conexão em tempo real</p>
                        </div>
                    </div>
                    <span class="text-sm font-semibold"
                          :class="isConnected ? 'text-green-400' : 'text-gray-400'"
                          x-text="isConnected ? 'Conectado' : 'Desconectado'"></span>
                </div>

                <!-- API Status -->
                <div class="flex items-center justify-between p-4 bg-gray-800/40 rounded-lg">
                    <div class="flex items-center gap-3">
                        <div class="w-3 h-3 rounded-full bg-green-500 animate-pulse"></div>
                        <div>
                            <p class="text-sm font-medium text-white">REST API</p>
                            <p class="text-xs text-gray-400">Endpoints HTTP</p>
                        </div>
                    </div>
                    <span class="text-sm font-semibold text-green-400">Operacional</span>
                </div>

                <!-- Auth Status -->
                <div class="flex items-center justify-between p-4 bg-gray-800/40 rounded-lg">
                    <div class="flex items-center gap-3">
                        <div class="w-3 h-3 rounded-full"
                             :class="(supabaseUser || apiKey) ? 'bg-green-500 animate-pulse' : 'bg-yellow-500'"></div>
                        <div>
                            <p class="text-sm font-medium text-white">Autenticação</p>
                            <p class="text-xs text-gray-400" x-text="supabaseUser ? 'Supabase' : apiKey ? 'API Key' : 'Não autenticado'"></p>
                        </div>
                    </div>
                    <span class="text-sm font-semibold"
                          :class="(supabaseUser || apiKey) ? 'text-green-400' : 'text-yellow-400'"
                          x-text="(supabaseUser || apiKey) ? 'Autenticado' : 'Anônimo'"></span>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6">
            <div class="flex items-center gap-3 mb-6">
                <i data-lucide="zap" class="w-5 h-5 text-purple-400"></i>
                <h2 class="text-xl font-bold text-white">Ações Rápidas</h2>
            </div>

            <div class="space-y-3">
                <!-- Create Room -->
                <button
                    @click="showCreateRoomModal = true"
                    class="w-full flex items-center gap-3 p-3 bg-gradient-to-r from-purple-600/20 to-pink-600/20 hover:from-purple-600/30 hover:to-pink-600/30 border border-purple-500/50 rounded-lg transition-all"
                >
                    <i data-lucide="plus-circle" class="w-5 h-5 text-purple-400"></i>
                    <span class="text-sm font-medium text-white">Nova Sala</span>
                </button>

                <!-- View Rooms -->
                <button
                    @click="navigateTo('rooms')"
                    class="w-full flex items-center gap-3 p-3 bg-gray-700/30 hover:bg-gray-700/50 border border-gray-700/50 rounded-lg transition-all"
                >
                    <i data-lucide="layout-grid" class="w-5 h-5 text-gray-400"></i>
                    <span class="text-sm font-medium text-white">Ver Salas</span>
                </button>

                <!-- Connect/Disconnect -->
                <button
                    @click="toggleConnection()"
                    class="w-full flex items-center gap-3 p-3 border rounded-lg transition-all"
                    :class="isConnected
                        ? 'bg-green-600/20 hover:bg-green-600/30 border-green-500/50'
                        : 'bg-gray-700/30 hover:bg-gray-700/50 border-gray-700/50'"
                >
                    <i data-lucide="wifi" class="w-5 h-5" :class="isConnected ? 'text-green-400' : 'text-gray-400'"></i>
                    <span class="text-sm font-medium text-white" x-text="isConnected ? 'Desconectar' : 'Conectar'"></span>
                </button>

                <!-- Refresh Metrics -->
                <button
                    @click="fetchMetrics()"
                    class="w-full flex items-center gap-3 p-3 bg-gray-700/30 hover:bg-gray-700/50 border border-gray-700/50 rounded-lg transition-all"
                    :disabled="isLoadingMetrics"
                >
                    <i data-lucide="refresh-cw" class="w-5 h-5 text-gray-400" :class="isLoadingMetrics && 'animate-spin'"></i>
                    <span class="text-sm font-medium text-white">Atualizar Métricas</span>
                </button>
            </div>
        </div>

    </div>

    <!-- Recent Activity (Rooms) -->
    <div class="dark-glass rounded-xl border border-gray-700/50 p-4 sm:p-5 md:p-6">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-3">
                <i data-lucide="history" class="w-5 h-5 text-blue-400"></i>
                <h2 class="text-xl font-bold text-white">Salas Recentes</h2>
            </div>
            <button
                @click="navigateTo('rooms')"
                class="text-sm text-purple-400 hover:text-purple-300 transition-colors"
            >
                Ver todas →
            </button>
        </div>

        <!-- Recent Rooms Grid -->
        <template x-if="rooms.length > 0">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4">
                <template x-for="room in rooms.slice(0, 6)" :key="room.id">
                    <div class="bg-gray-800/40 hover:bg-gray-800/60 rounded-lg p-4 border border-gray-700/30 hover:border-purple-500/50 transition-all cursor-pointer"
                         @click="openRoom(room.id, room.name)">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                                <i data-lucide="hash" class="w-5 h-5 text-white"></i>
                            </div>
                            <div class="flex-1 min-w-0">
                                <h3 class="text-sm font-bold text-white truncate" x-text="room.name"></h3>
                                <p class="text-xs text-gray-500 font-mono truncate" x-text="room.id"></p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 text-xs text-gray-400">
                            <div class="flex items-center gap-1">
                                <i data-lucide="users" class="w-3 h-3"></i>
                                <span x-text="room.participants.length"></span>
                            </div>
                            <template x-if="room.participants.length > 0">
                                <div class="flex items-center gap-1 text-green-400">
                                    <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                                    <span>Ativa</span>
                                </div>
                            </template>
                        </div>
                    </div>
                </template>
            </div>
        </template>

        <!-- Empty State -->
        <template x-if="rooms.length === 0">
            <div class="text-center py-8">
                <i data-lucide="inbox" class="w-16 h-16 text-gray-600 mx-auto mb-4"></i>
                <p class="text-gray-400 mb-4">Nenhuma sala criada ainda</p>
                <button
                    @click="showCreateRoomModal = true"
                    class="px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 rounded-lg font-medium transition-all duration-200"
                >
                    Criar Primeira Sala
                </button>
            </div>
        </template>
    </div>

</div>

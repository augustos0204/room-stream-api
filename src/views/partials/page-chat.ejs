<!-- Chat Page -->
<div class="space-y-6 animate-fade-in">

    <!-- No Room Selected State -->
    <template x-if="!currentRoomId">
        <div class="dark-glass rounded-xl border border-gray-700/50 p-12 text-center">
            <i data-lucide="message-square-off" class="w-20 h-20 text-gray-600 mx-auto mb-6"></i>
            <h2 class="text-2xl font-bold text-white mb-3">Nenhuma sala selecionada</h2>
            <p class="text-gray-400 mb-8">Selecione uma sala para começar a conversar</p>
            <button
                @click="navigateTo('rooms')"
                class="px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 rounded-lg font-medium transition-all duration-200"
            >
                Ver Salas Disponíveis
            </button>
        </div>
    </template>

    <!-- Room Active -->
    <template x-if="currentRoomId">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <!-- Chat Section - 2 columns on large screens -->
            <div class="lg:col-span-2 space-y-6">

                <!-- Room Info Card -->
                <div class="dark-glass rounded-xl border border-gray-700/50 p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center">
                                <i data-lucide="hash" class="w-7 h-7 text-white"></i>
                            </div>
                            <div>
                                <h2 class="text-2xl font-bold text-white" x-text="currentRoomName"></h2>
                                <p class="text-sm text-gray-400">
                                    <span x-text="roomParticipants.length"></span>
                                    <span x-text="roomParticipants.length === 1 ? 'participante online' : 'participantes online'"></span>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-center gap-2">
                            <template x-if="!isConnected">
                                <button
                                    @click="connect()"
                                    class="px-4 py-2 bg-green-600 hover:bg-green-700 rounded-lg text-sm font-medium transition-colors"
                                >
                                    Conectar
                                </button>
                            </template>

                            <template x-if="isConnected">
                                <button
                                    @click="joinRoom()"
                                    class="px-4 py-2 bg-purple-600 hover:bg-purple-700 rounded-lg text-sm font-medium transition-colors"
                                >
                                    Entrar na Sala
                                </button>
                            </template>

                            <button
                                @click="leaveRoom(); navigateTo('rooms')"
                                class="px-4 py-2 bg-red-600/20 hover:bg-red-600/30 border border-red-700/50 rounded-lg text-sm font-medium text-red-400 transition-colors"
                            >
                                Sair
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Chat Messages -->
                <div class="dark-glass rounded-xl border border-gray-700/50 flex flex-col" style="height: calc(100vh - 24rem);">

                    <!-- Messages Header -->
                    <div class="flex items-center justify-between p-4 border-b border-gray-700/50">
                        <div class="flex items-center gap-3">
                            <i data-lucide="message-circle" class="w-5 h-5 text-green-400"></i>
                            <h3 class="font-bold text-white">Mensagens</h3>
                            <span class="px-2 py-0.5 bg-gray-700 rounded-full text-xs text-gray-300" x-text="roomLogs.length"></span>
                        </div>

                        <div class="flex items-center gap-2">
                            <label class="flex items-center gap-2 text-sm text-gray-400 cursor-pointer">
                                <input
                                    type="checkbox"
                                    x-model="autoScroll"
                                    class="w-4 h-4 rounded bg-gray-700 border-gray-600 text-purple-600 focus:ring-purple-500"
                                />
                                <span>Auto-scroll</span>
                            </label>

                            <button
                                @click="roomLogs = []"
                                class="p-2 hover:bg-gray-700/50 rounded-lg transition-colors"
                                title="Limpar mensagens"
                            >
                                <i data-lucide="trash-2" class="w-4 h-4 text-gray-400"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Messages Container -->
                    <div
                        class="flex-1 overflow-y-auto custom-scrollbar p-4 space-y-3"
                        x-ref="chatMessages"
                        @scroll.debounce.100ms="if (autoScroll && $el.scrollHeight - $el.scrollTop - $el.clientHeight > 100) autoScroll = false"
                    >
                        <template x-if="roomLogs.length === 0">
                            <div class="flex items-center justify-center h-full">
                                <div class="text-center">
                                    <i data-lucide="inbox" class="w-16 h-16 text-gray-600 mx-auto mb-4"></i>
                                    <p class="text-gray-400">Nenhuma mensagem ainda</p>
                                    <p class="text-sm text-gray-500 mt-2">Seja o primeiro a enviar uma mensagem!</p>
                                </div>
                            </div>
                        </template>

                        <template x-for="(log, index) in roomLogs" :key="index">
                            <div>
                                <!-- System Messages -->
                                <template x-if="log.type !== 'user_message'">
                                    <div class="flex items-start gap-3 py-2">
                                        <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                                             :class="{
                                                'bg-green-600/20': log.type === 'success',
                                                'bg-blue-600/20': log.type === 'info',
                                                'bg-yellow-600/20': log.type === 'warning',
                                                'bg-red-600/20': log.type === 'error'
                                             }">
                                            <i :data-lucide="log.type === 'success' ? 'check' : log.type === 'error' ? 'x' : 'info'"
                                               class="w-4 h-4"
                                               :class="{
                                                   'text-green-400': log.type === 'success',
                                                   'text-blue-400': log.type === 'info',
                                                   'text-yellow-400': log.type === 'warning',
                                                   'text-red-400': log.type === 'error'
                                               }"></i>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="text-sm text-gray-300 leading-relaxed" x-html="log.message"></div>
                                            <p class="text-xs text-gray-600 mt-1" x-text="new Date(log.timestamp).toLocaleTimeString('pt-BR')"></p>
                                        </div>
                                    </div>
                                </template>

                                <!-- User Messages -->
                                <template x-if="log.type === 'user_message'">
                                    <div class="flex items-start gap-3 py-2"
                                         :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'flex-row-reverse'">
                                        <div class="w-8 h-8 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
                                            <span class="text-white text-xs font-bold uppercase"
                                                  x-text="(log.senderName || 'A')[0]"></span>
                                        </div>
                                        <div class="flex-1 min-w-0 max-w-lg">
                                            <div class="flex items-center gap-2 mb-1"
                                                 :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'flex-row-reverse'">
                                                <span class="text-sm font-semibold"
                                                      :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) ? 'text-purple-400' : 'text-gray-300'"
                                                      x-text="log.displayName || log.senderName || 'Anônimo'"></span>
                                                <span class="text-xs text-gray-600"
                                                      x-text="new Date(log.timestamp).toLocaleTimeString('pt-BR')"></span>
                                            </div>
                                            <div class="rounded-lg px-4 py-2 break-words"
                                                 :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id))
                                                     ? 'bg-gradient-to-r from-purple-600 to-pink-600 text-white'
                                                     : 'bg-gray-800 text-gray-200'"
                                                 x-html="log.message"></div>
                                        </div>
                                    </div>
                                </template>
                            </div>
                        </template>

                        <!-- Auto-scroll anchor -->
                        <div x-ref="chatBottom"></div>
                    </div>

                    <!-- Message Input -->
                    <div class="p-4 border-t border-gray-700/50">
                        <form @submit.prevent="sendMessage()" class="flex gap-3">
                            <input
                                type="text"
                                x-model="message"
                                placeholder="Digite sua mensagem... (Ctrl+Enter para enviar)"
                                class="flex-1 bg-gray-800/50 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500/50 transition-all"
                                :disabled="!isConnected || !currentRoomId"
                                @keydown.ctrl.enter="sendMessage()"
                            />
                            <button
                                type="submit"
                                class="px-6 py-3 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 rounded-lg font-medium transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
                                :disabled="!isConnected || !currentRoomId || !message.trim()"
                            >
                                <i data-lucide="send" class="w-4 h-4"></i>
                                <span class="hidden sm:inline">Enviar</span>
                            </button>
                        </form>
                        <p class="text-xs text-gray-500 mt-2">
                            <template x-if="!isConnected">
                                ⚠️ Conecte-se ao WebSocket para enviar mensagens
                            </template>
                            <template x-if="isConnected && !currentRoomId">
                                ⚠️ Entre em uma sala para enviar mensagens
                            </template>
                            <template x-if="isConnected && currentRoomId">
                                ✓ Pronto para enviar mensagens
                            </template>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Participants Sidebar - 1 column on large screens -->
            <div class="space-y-6">

                <!-- Participants List -->
                <div class="dark-glass rounded-xl border border-gray-700/50">
                    <div class="flex items-center justify-between p-4 border-b border-gray-700/50">
                        <div class="flex items-center gap-3">
                            <i data-lucide="users" class="w-5 h-5 text-blue-400"></i>
                            <h3 class="font-bold text-white">Participantes</h3>
                            <span class="px-2 py-0.5 bg-gray-700 rounded-full text-xs text-gray-300" x-text="roomParticipants.length"></span>
                        </div>

                        <button
                            @click="joinRoom()"
                            class="p-2 hover:bg-gray-700/50 rounded-lg transition-colors"
                            title="Atualizar participantes"
                        >
                            <i data-lucide="refresh-cw" class="w-4 h-4 text-gray-400"></i>
                        </button>
                    </div>

                    <div class="p-4 space-y-2 max-h-96 overflow-y-auto custom-scrollbar">
                        <template x-if="roomParticipants.length === 0">
                            <div class="text-center py-8">
                                <i data-lucide="user-x" class="w-12 h-12 text-gray-600 mx-auto mb-3"></i>
                                <p class="text-sm text-gray-400">Nenhum participante online</p>
                            </div>
                        </template>

                        <template x-for="participant in roomParticipants" :key="participant.clientId">
                            <div class="flex items-center gap-3 p-3 rounded-lg transition-colors"
                                 :class="participant.clientId === socket?.id ? 'bg-purple-900/30 border border-purple-700/50' : 'bg-gray-800/40 hover:bg-gray-800/60'">
                                <div class="relative">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center">
                                        <span class="text-white text-sm font-bold uppercase"
                                              x-text="(participant.name || 'A')[0]"></span>
                                    </div>
                                    <div class="absolute -bottom-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-gray-900"></div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center gap-2">
                                        <p class="text-sm font-medium text-white truncate" x-text="participant.name || 'Anônimo'"></p>
                                        <template x-if="participant.clientId === socket?.id">
                                            <span class="px-2 py-0.5 bg-purple-600/30 text-purple-300 rounded-full text-xs font-medium">Você</span>
                                        </template>
                                    </div>
                                    <p class="text-xs text-gray-500 font-mono truncate" x-text="participant.clientId"></p>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- Connection Info -->
                <div class="dark-glass rounded-xl border border-gray-700/50 p-4">
                    <div class="flex items-center gap-3 mb-4">
                        <i data-lucide="info" class="w-5 h-5 text-gray-400"></i>
                        <h3 class="font-bold text-white">Informações</h3>
                    </div>

                    <div class="space-y-3 text-sm">
                        <div class="flex items-center justify-between">
                            <span class="text-gray-400">Status:</span>
                            <span class="font-medium" :class="isConnected ? 'text-green-400' : 'text-red-400'"
                                  x-text="isConnected ? 'Conectado' : 'Desconectado'"></span>
                        </div>

                        <template x-if="isConnected && socket">
                            <div class="flex items-center justify-between">
                                <span class="text-gray-400">Socket ID:</span>
                                <span class="font-mono text-xs text-gray-300 truncate ml-2" x-text="socket.id"></span>
                            </div>
                        </template>

                        <div class="flex items-center justify-between">
                            <span class="text-gray-400">Sala ID:</span>
                            <span class="font-mono text-xs text-gray-300 truncate ml-2" x-text="currentRoomId"></span>
                        </div>

                        <div class="flex items-center justify-between">
                            <span class="text-gray-400">Seu nome:</span>
                            <span class="font-medium text-gray-300 truncate ml-2" x-text="participantName || 'Não definido'"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</div>

<!-- Auto-scroll script -->
<script>
    document.addEventListener('alpine:init', () => {
        Alpine.effect(() => {
            // Watch for new messages and auto-scroll
            const app = Alpine.$data(document.body);
            if (app && app.autoScroll && app.$refs.chatBottom) {
                setTimeout(() => {
                    app.$refs.chatBottom?.scrollIntoView({ behavior: 'smooth' });
                }, 100);
            }
        });
    });
</script>

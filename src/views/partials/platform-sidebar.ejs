<!-- Platform Sidebar Navigation -->
<aside
    class="sidebar fixed left-0 h-[100dvh] border-r border-gray-700/50 transition-all duration-300 flex flex-col pt-[73px] dark-glass shadow-2xl"
    :class="[
        sidebarExpanded ? 'w-64' : 'w-16 lg:w-16',
        sidebarExpanded || window.innerWidth >= 1024 ? 'translate-x-0' : '-translate-x-full',
        'z-40'
    ]"
    @mouseenter="handleSidebarMouseEnter()"
    @mouseleave="handleSidebarMouseLeave()"
>
    <!-- Indicador Visual de Modo Hover (quando não pinada e expandida) -->
    <div 
        x-show="sidebarExpanded && !sidebarPinned" 
        class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-purple-500 via-pink-500 to-purple-500 animate-pulse"
    ></div>

    <!-- Navigation Items -->
    <nav class="p-2 space-y-1 flex-1 overflow-y-auto overflow-x-hidden custom-scrollbar" style="scrollbar-width: thin;">
        <!-- Dashboard -->
        <button
            @click="navigateTo('dashboard')"
            class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition-all duration-200 relative group overflow-visible"
            :class="currentPage === 'dashboard'
                ? 'bg-gradient-to-r from-blue-600/30 to-cyan-600/30 border border-blue-500/50 text-blue-300'
                : 'hover:bg-gray-700/30 text-gray-400 hover:text-gray-200'"
        >
            <i data-lucide="bar-chart-3" class="w-5 h-5 flex-shrink-0"></i>
            <span x-show="sidebarExpanded" class="font-medium whitespace-nowrap">Dashboard</span>
            <!-- Tooltip quando fechada -->
            <div 
                x-show="!sidebarExpanded" 
                class="absolute left-full ml-2 px-3 py-2 bg-gray-800 text-white text-sm rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-50"
            >
                Dashboard
            </div>
        </button>

        <!-- Rooms -->
        <button
            @click="navigateTo('rooms')"
            class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition-all duration-200 relative group overflow-visible"
            :class="currentPage === 'rooms'
                ? 'bg-gradient-to-r from-purple-600/30 to-pink-600/30 border border-purple-500/50 text-purple-300'
                : 'hover:bg-gray-700/30 text-gray-400 hover:text-gray-200'"
        >
            <i data-lucide="layout-grid" class="w-5 h-5 flex-shrink-0"></i>
            <span x-show="sidebarExpanded" class="font-medium whitespace-nowrap">Salas</span>
            <span
                x-show="sidebarExpanded && rooms.length > 0"
                class="ml-auto px-2 py-0.5 text-xs rounded-full bg-gray-700"
                x-text="rooms.length"
            ></span>
            <!-- Tooltip quando fechada -->
            <div 
                x-show="!sidebarExpanded" 
                class="absolute left-full ml-2 px-3 py-2 bg-gray-800 text-white text-sm rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-50"
            >
                Salas <span x-show="rooms.length > 0" class="ml-1 px-1.5 py-0.5 bg-gray-700 rounded text-xs" x-text="rooms.length"></span>
            </div>
        </button>

        <!-- Settings -->
        <button
            @click="navigateTo('settings')"
            class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition-all duration-200 relative group overflow-visible"
            :class="currentPage === 'settings'
                ? 'bg-gradient-to-r from-orange-600/30 to-yellow-600/30 border border-orange-500/50 text-orange-300'
                : 'hover:bg-gray-700/30 text-gray-400 hover:text-gray-200'"
        >
            <i data-lucide="settings" class="w-5 h-5 flex-shrink-0"></i>
            <span x-show="sidebarExpanded" class="font-medium whitespace-nowrap">Configurações</span>
            <!-- Tooltip quando fechada -->
            <div 
                x-show="!sidebarExpanded" 
                class="absolute left-full ml-2 px-3 py-2 bg-gray-800 text-white text-sm rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-50"
            >
                Configurações
            </div>
        </button>
    </nav>

    <!-- User Profile / Login Area (Bottom) -->
    <div class="border-t border-gray-700/50 p-4">
        <!-- Not Logged In -->
        <div x-show="!supabaseUser && !apiKey" class="space-y-2">
            <button
                @click="viewOwnProfile()"
                class="w-full flex items-center gap-3 px-3 py-3 bg-gradient-to-r from-purple-600/20 to-pink-600/20 hover:from-purple-600/30 hover:to-pink-600/30 border border-purple-500/50 rounded-lg transition-all"
                :class="!sidebarExpanded && 'justify-center'"
            >
                <i data-lucide="log-in" class="w-5 h-5 text-purple-400"></i>
                <span x-show="sidebarExpanded" class="text-purple-300 font-medium">Fazer Login</span>
            </button>
        </div>

        <!-- Logged In (Supabase) -->
        <div x-show="supabaseUser">
            <button
                @click="viewOwnProfile()"
                class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition-all duration-300 relative group border border-transparent hover:border-green-500/30 hover:bg-gradient-to-r hover:from-green-600/10 hover:to-emerald-600/10 hover:shadow-lg hover:shadow-green-500/10 hover:scale-[1.02]"
                :class="!sidebarExpanded && 'justify-center'"
            >
                <!-- Avatar with animated ring -->
                <div class="relative flex-shrink-0">
                    <!-- Pulsing ring on hover -->
                    <div class="absolute inset-0 rounded-full bg-gradient-to-br from-green-400 to-emerald-400 opacity-0 group-hover:opacity-100 blur-md group-hover:animate-pulse transition-opacity"></div>
                    <div class="relative w-10 h-10 rounded-full bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center">
                        <i data-lucide="user" class="w-5 h-5 text-white"></i>
                    </div>
                    <!-- Online/Offline status badge based on WebSocket connection -->
                    <div
                        class="absolute -bottom-0.5 -right-0.5 w-3 h-3 rounded-full border-2 border-gray-900 transition-colors"
                        :class="isConnected ? 'bg-green-400 animate-pulse' : 'bg-gray-500'"
                    ></div>
                </div>

                <div x-show="sidebarExpanded" class="flex-1 min-w-0 text-left overflow-hidden">
                    <p class="text-sm font-medium text-gray-200 group-hover:text-white truncate transition-colors" x-text="supabaseUser?.email"></p>
                    <p class="text-xs text-green-400 group-hover:text-green-300 transition-colors truncate">Supabase Auth</p>
                </div>

                <!-- Arrow icon when expanded -->
                <div x-show="sidebarExpanded" class="opacity-0 group-hover:opacity-100 transition-all transform group-hover:translate-x-1">
                    <i data-lucide="chevron-right" class="w-4 h-4 text-green-400"></i>
                </div>

                <!-- Tooltip quando fechada -->
                <div
                    x-show="!sidebarExpanded"
                    class="absolute left-full ml-2 px-3 py-2 bg-gradient-to-r from-green-600 to-emerald-600 text-white text-sm rounded-lg shadow-xl shadow-green-500/30 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-50 flex items-center gap-2"
                >
                    <span>Ver Perfil</span>
                    <i data-lucide="chevron-right" class="w-3 h-3"></i>
                </div>
            </button>
        </div>

        <!-- Logged In (API Key) -->
        <div x-show="!supabaseUser && apiKey">
            <button
                @click="viewOwnProfile()"
                class="w-full flex items-center gap-3 px-3 py-3 rounded-lg transition-all duration-300 relative group border border-transparent hover:border-blue-500/30 hover:bg-gradient-to-r hover:from-blue-600/10 hover:to-cyan-600/10 hover:shadow-lg hover:shadow-blue-500/10 hover:scale-[1.02]"
                :class="!sidebarExpanded && 'justify-center'"
            >
                <!-- Avatar with animated ring -->
                <div class="relative flex-shrink-0">
                    <!-- Pulsing ring on hover -->
                    <div class="absolute inset-0 rounded-full bg-gradient-to-br from-blue-400 to-cyan-400 opacity-0 group-hover:opacity-100 blur-md group-hover:animate-pulse transition-opacity"></div>
                    <div class="relative w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center">
                        <i data-lucide="key" class="w-5 h-5 text-white"></i>
                    </div>
                    <!-- Online/Offline status badge based on WebSocket connection -->
                    <div
                        class="absolute -bottom-0.5 -right-0.5 w-3 h-3 rounded-full border-2 border-gray-900 transition-colors"
                        :class="isConnected ? 'bg-blue-400 animate-pulse' : 'bg-gray-500'"
                    ></div>
                </div>

                <div x-show="sidebarExpanded" class="flex-1 min-w-0 text-left overflow-hidden">
                    <p class="text-sm font-medium text-gray-200 group-hover:text-white truncate transition-colors" x-text="participantName || 'Usuário'"></p>
                    <p class="text-xs text-blue-400 group-hover:text-blue-300 transition-colors truncate">API Key Auth</p>
                </div>

                <!-- Arrow icon when expanded -->
                <div x-show="sidebarExpanded" class="opacity-0 group-hover:opacity-100 transition-all transform group-hover:translate-x-1">
                    <i data-lucide="chevron-right" class="w-4 h-4 text-blue-400"></i>
                </div>

                <!-- Tooltip quando fechada -->
                <div
                    x-show="!sidebarExpanded"
                    class="absolute left-full ml-2 px-3 py-2 bg-gradient-to-r from-blue-600 to-cyan-600 text-white text-sm rounded-lg shadow-xl shadow-blue-500/30 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-50 flex items-center gap-2"
                >
                    <span>Ver Perfil</span>
                    <i data-lucide="chevron-right" class="w-3 h-3"></i>
                </div>
            </button>
        </div>
    </div>
</aside>

<!-- Sidebar Overlay/Backdrop Desktop (quando hover mas não pinada) -->
<div
    x-show="sidebarExpanded && !sidebarPinned && window.innerWidth >= 1024"
    class="hidden lg:block fixed inset-0 bg-black/20 backdrop-blur-sm z-35 pt-[73px] ml-16"
    x-transition:enter="transition-opacity ease-linear duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition-opacity ease-linear duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    @click="sidebarExpanded = false"
></div>

<!-- Sidebar Overlay Mobile (quando expandida em mobile, independente de pinned) -->
<div
    x-show="sidebarExpanded && window.innerWidth < 1024"
    @click="sidebarExpanded = false; sidebarPinned = false"
    class="fixed inset-0 bg-black/50 z-30 lg:hidden"
    x-transition:enter="transition-opacity ease-linear duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition-opacity ease-linear duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
></div>

<!-- Create Room Modal (Bottom Sheet on Mobile, Modal on Desktop) -->
<div
    x-show="showCreateRoomModal"
    class="fixed inset-0 z-50 md:flex md:items-center md:justify-center md:p-4"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
>
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm" @click="showCreateRoomModal = false"></div>

    <!-- Bottom Sheet (Mobile) / Modal (Desktop) -->
    <div
        x-ref="createRoomSheet"
        class="
            fixed inset-x-0 bottom-0
            max-h-[80vh] rounded-t-3xl
            md:relative md:inset-auto md:max-w-md md:w-full md:rounded-xl
            dark-glass border-t md:border border-gray-700/50
        "
        data-fullheight-sheet="false"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="translate-y-full md:opacity-0 md:scale-95 md:translate-y-0"
        x-transition:enter-end="translate-y-0 md:opacity-100 md:scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="translate-y-0 md:opacity-100 md:scale-100"
        x-transition:leave-end="translate-y-full md:opacity-0 md:scale-95 md:translate-y-0"
        @touchstart="handleSheetTouchStart($event)"
        @touchmove="handleSheetTouchMove($event, $refs.createRoomSheet)"
        @touchend="handleSheetTouchEnd($event, $refs.createRoomSheet, 'showCreateRoomModal')"
        @click.stop
    >
        <!-- Drag Handle (Mobile Only) -->
        <div class="md:hidden flex justify-center py-3 cursor-grab active:cursor-grabbing">
            <div class="w-12 h-1.5 rounded-full bg-gray-600 transition-colors hover:bg-gray-400"></div>
        </div>
        <!-- Header -->
        <div class="flex items-center justify-between p-6 border-b border-gray-700/50">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center">
                    <i data-lucide="plus-circle" class="w-5 h-5 text-white"></i>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-white">Criar Nova Sala</h2>
                </div>
            </div>
            <button
                @click="showCreateRoomModal = false"
                class="p-2 hover:bg-gray-700/50 rounded-lg transition-colors"
            >
                <i data-lucide="x" class="w-5 h-5 text-gray-400"></i>
            </button>
        </div>

        <!-- Content -->
        <div class="p-6">
            <form @submit.prevent="createRoom()" class="space-y-4">
                <div>
                    <label for="newRoomName" class="block text-sm font-medium text-gray-300 mb-2">
                        Nome da Sala
                    </label>
                    <input
                        id="newRoomName"
                        type="text"
                        x-model="newRoomName"
                        placeholder="Digite o nome da sala..."
                        class="w-full bg-gray-800/50 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-500/50 transition-all"
                        :disabled="isCreatingRoom"
                        required
                    />
                </div>

                <div class="flex gap-3">
                    <button
                        type="submit"
                        class="flex-1 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 rounded-lg font-medium text-white transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
                        :disabled="isCreatingRoom || !newRoomName.trim()"
                    >
                        <i data-lucide="plus" class="w-4 h-4" x-show="!isCreatingRoom"></i>
                        <i data-lucide="loader-2" class="w-4 h-4 animate-spin" x-show="isCreatingRoom"></i>
                        <span x-text="isCreatingRoom ? 'Criando...' : 'Criar Sala'"></span>
                    </button>

                    <button
                        type="button"
                        @click="showCreateRoomModal = false; newRoomName = ''"
                        class="px-6 py-3 bg-gray-700/50 hover:bg-gray-700 rounded-lg font-medium text-gray-300 transition-colors"
                        :disabled="isCreatingRoom"
                    >
                        Cancelar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

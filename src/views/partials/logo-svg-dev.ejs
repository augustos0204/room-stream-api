<!-- RoomStream Logo SVG - DEV Version (Orange Theme) -->
<%
// Generate unique IDs for gradients to avoid conflicts when multiple logos are on the same page
const uniqueId = `logo_dev_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
const grad1Id = `gradDev1_${uniqueId}`;
const grad2Id = `gradDev2_${uniqueId}`;
%>
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="w-full h-full">
    <defs>
        <!-- Gradiente laranja para DEV -->
        <linearGradient id="<%= grad1Id %>" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#f97316;stop-opacity:1" />
            <stop offset="50%" style="stop-color:#ea580c;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#c2410c;stop-opacity:1" />
        </linearGradient>
        <linearGradient id="<%= grad2Id %>" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
        </linearGradient>
    </defs>

    <!-- Background rounded square (laranja) -->
    <rect width="100" height="100" rx="20" fill="url(#<%= grad1Id %>)"/>

    <!-- Rotated square (diamond) in center -->
    <rect x="35" y="35" width="30" height="30"
          transform="rotate(45 50 50)"
          fill="none"
          stroke="#ffffff"
          stroke-width="3"
          opacity="0.9"/>

    <!-- Central pulsing dot (mais rÃ¡pido em DEV) -->
    <circle cx="50" cy="50" r="5" fill="#ffffff">
        <animate attributeName="opacity"
                 values="1;0.3;1"
                 dur="1s"
                 repeatCount="indefinite"/>
    </circle>

    <!-- Connection lines (stream concept) -->
    <path d="M 20 30 Q 35 30 50 50"
          stroke="url(#<%= grad2Id %>)"
          stroke-width="2"
          fill="none"
          opacity="0.7"/>
    <path d="M 80 30 Q 65 30 50 50"
          stroke="url(#<%= grad2Id %>)"
          stroke-width="2"
          fill="none"
          opacity="0.7"/>
    <path d="M 50 50 Q 50 65 30 80"
          stroke="url(#<%= grad2Id %>)"
          stroke-width="2"
          fill="none"
          opacity="0.7"/>
    <path d="M 50 50 Q 50 65 70 80"
          stroke="url(#<%= grad2Id %>)"
          stroke-width="2"
          fill="none"
          opacity="0.7"/>
</svg>

<!-- Chat Modal (opens in overlay, not full page) - MULTIPLE ROOMS -->
<div
    x-show="showChatModal && activeRooms.length > 0"
    class="fixed inset-0 z-50 flex items-center justify-center p-4"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    @click="showChatModal = false"
>
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/70 backdrop-blur-sm" @click="showChatModal = false"></div>

    <!-- Modal Content -->
    <div
        class="relative dark-glass rounded-xl border border-gray-700/50 w-full max-w-5xl h-[90vh] md:h-[85vh] lg:h-[80vh] flex flex-col overflow-hidden"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 transform scale-95"
        x-transition:enter-end="opacity-100 transform scale-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 transform scale-100"
        x-transition:leave-end="opacity-0 transform scale-95"
        @click.stop
        x-data="{ mobileView: 'messages' }"
    >
        <!-- Room Tabs -->
        <div class="flex items-center gap-1 px-3 sm:px-4 pt-2 sm:pt-3 overflow-x-auto custom-scrollbar">
            <template x-for="room in activeRooms" :key="room.id">
                <button
                    @click="switchToRoom(room.id)"
                    class="relative flex items-center gap-1.5 sm:gap-2 px-2 sm:px-3 md:px-4 py-1.5 sm:py-2 rounded-t-lg transition-all duration-200 whitespace-nowrap"
                    :class="currentActiveRoomId === room.id 
                        ? 'bg-gray-900/50 border-t border-x border-gray-700/50 text-white' 
                        : 'bg-gray-800/30 text-gray-400 hover:text-gray-200 hover:bg-gray-800/50'"
                >
                    <!-- Room Icon -->
                    <div class="w-4 h-4 sm:w-5 sm:h-5 rounded-full flex items-center justify-center flex-shrink-0"
                         :class="room.joined ? 'bg-green-500/20' : 'bg-gray-700/50'">
                        <i :data-lucide="room.joined ? 'hash' : 'hash'" 
                           class="w-2.5 h-2.5 sm:w-3 sm:h-3"
                           :class="room.joined ? 'text-green-400' : 'text-gray-500'"></i>
                    </div>
                    
                    <!-- Room Name -->
                    <span class="text-xs sm:text-sm font-medium max-w-[80px] sm:max-w-[100px] md:max-w-[120px] truncate" x-text="room.name"></span>
                    
                    <!-- Unread Badge -->
                    <template x-if="room.unreadCount > 0 && currentActiveRoomId !== room.id">
                        <span class="absolute -top-1 -right-1 px-1.5 py-0.5 bg-red-500 text-white text-xs font-bold rounded-full min-w-[18px] sm:min-w-[20px] text-center"
                              x-text="room.unreadCount"></span>
                    </template>
                    
                    <!-- Close Tab Button -->
                    <button
                        @click.stop="closeRoomTab(room.id)"
                        class="ml-0.5 sm:ml-1 p-0.5 sm:p-1 hover:bg-red-500/20 rounded transition-colors flex-shrink-0"
                        title="Fechar aba"
                    >
                        <i data-lucide="x" class="w-2.5 h-2.5 sm:w-3 sm:h-3"></i>
                    </button>
                </button>
            </template>
        </div>

        <!-- Header -->
        <div class="flex items-center justify-between p-3 sm:p-4 border-b border-gray-700/50 bg-gray-900/50">
            <div class="flex items-center gap-2 sm:gap-3 md:gap-4 flex-1 min-w-0">
                <div class="w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 rounded-full bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="hash" class="w-5 h-5 sm:w-5.5 sm:h-5.5 md:w-6 md:h-6 text-white"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <h2 class="text-base sm:text-lg font-bold text-white truncate" x-text="currentRoomName"></h2>
                    <p class="text-xs sm:text-sm text-gray-400 truncate">
                        <span x-text="roomParticipants.length"></span>
                        <span x-text="roomParticipants.length === 1 ? 'participante' : 'participantes'"></span>
                    </p>
                </div>
            </div>

            <div class="flex items-center gap-1 sm:gap-2 flex-shrink-0">
                <!-- Room Info Badge (hidden on mobile) -->
                <div class="hidden md:flex px-3 py-1.5 bg-gray-800/50 rounded-lg border border-gray-700/50">
                    <span class="text-xs text-gray-400">Sala </span>
                    <span class="text-xs font-bold text-green-400" x-text="activeRooms.length"></span>
                    <span class="text-xs text-gray-400"> de </span>
                    <span class="text-xs text-gray-300" x-text="activeRooms.length"></span>
                </div>
                
                <!-- Connect Button (if not connected) -->
                <template x-if="!isConnected">
                    <button
                        @click="connect()"
                        class="px-3 sm:px-4 py-1.5 sm:py-2 bg-green-600 hover:bg-green-700 rounded-lg text-xs sm:text-sm font-medium transition-colors flex items-center gap-1.5 sm:gap-2"
                    >
                        <i data-lucide="wifi" class="w-3.5 h-3.5 sm:w-4 sm:h-4"></i>
                        <span class="hidden sm:inline">Conectar</span>
                    </button>
                </template>

                <!-- Join Room Button (if connected but not in current room) -->
                <template x-if="isConnected && getCurrentActiveRoom() && !getCurrentActiveRoom().joined">
                    <button
                        @click="joinRoom()"
                        class="px-3 sm:px-4 py-1.5 sm:py-2 bg-purple-600 hover:bg-purple-700 rounded-lg text-xs sm:text-sm font-medium transition-colors flex items-center gap-1.5 sm:gap-2"
                    >
                        <i data-lucide="log-in" class="w-3.5 h-3.5 sm:w-4 sm:h-4"></i>
                        <span class="hidden sm:inline">Entrar</span>
                    </button>
                </template>

                <!-- Leave Room Button (if in current room) -->
                <template x-if="isConnected && getCurrentActiveRoom() && getCurrentActiveRoom().joined">
                    <button
                        @click="leaveRoom()"
                        class="px-3 sm:px-4 py-1.5 sm:py-2 bg-red-600 hover:bg-red-700 rounded-lg text-xs sm:text-sm font-medium transition-colors flex items-center gap-1.5 sm:gap-2"
                    >
                        <i data-lucide="log-out" class="w-3.5 h-3.5 sm:w-4 sm:h-4"></i>
                        <span class="hidden sm:inline">Sair</span>
                    </button>
                </template>

                <!-- Close Modal Button -->
                <button
                    @click="showChatModal = false"
                    class="p-1.5 sm:p-2 hover:bg-gray-700/50 rounded-lg transition-colors"
                    title="Fechar (mantém salas abertas)"
                >
                    <i data-lucide="minimize-2" class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400"></i>
                </button>
            </div>
        </div>

        <!-- Mobile View Switch (below header) -->
        <div class="md:hidden flex items-center border-b border-gray-700/50 bg-gray-900/30 relative">
            <button
                @click="mobileView = 'messages'"
                class="flex-1 flex items-center justify-center gap-2 py-3 px-4 transition-all duration-200 relative z-10"
                :class="mobileView === 'messages' 
                    ? 'text-white' 
                    : 'text-gray-400 hover:text-gray-200'"
            >
                <i data-lucide="message-square" class="w-4 h-4"></i>
                <span class="text-sm font-medium">Mensagens</span>
            </button>
            <button
                @click="mobileView = 'participants'"
                class="flex-1 flex items-center justify-center gap-2 py-3 px-4 transition-all duration-200 relative z-10"
                :class="mobileView === 'participants' 
                    ? 'text-white' 
                    : 'text-gray-400 hover:text-gray-200'"
            >
                <i data-lucide="users" class="w-4 h-4"></i>
                <span class="text-sm font-medium">Participantes</span>
                <span 
                    class="px-1.5 py-0.5 rounded-full text-xs font-bold min-w-[20px] text-center transition-colors duration-200"
                    :class="mobileView === 'participants' ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300'"
                    x-text="roomParticipants.length"
                ></span>
            </button>
            
            <!-- Animated Indicator Bar with Glow -->
            <div 
                class="absolute bottom-0 left-0 h-0.5 w-1/2 transition-all duration-300 ease-out"
                :class="mobileView === 'participants' && 'translate-x-full'"
            >
                <div 
                    class="h-full w-full transition-all duration-300 animate-pulse"
                    :class="mobileView === 'messages' 
                        ? 'bg-gradient-to-r from-green-600 to-emerald-600 shadow-[0_0_10px_rgba(34,197,94,0.5),0_0_20px_rgba(34,197,94,0.3),0_0_30px_rgba(34,197,94,0.1)]' 
                        : 'bg-gradient-to-r from-blue-600 to-cyan-600 shadow-[0_0_10px_rgba(59,130,246,0.5),0_0_20px_rgba(59,130,246,0.3),0_0_30px_rgba(59,130,246,0.1)]'"
                ></div>
            </div>
        </div>

        <!-- Chat Content (2 columns) -->
        <div class="flex flex-1 overflow-hidden">

            <!-- Left: Messages -->
            <div class="flex-1 flex flex-col"
                 :class="mobileView === 'participants' && 'hidden md:flex'">

                <!-- Messages List -->
                <div
                    class="flex-1 overflow-y-auto overflow-x-hidden custom-scrollbar p-3 sm:p-4 space-y-2 sm:space-y-3"
                    x-ref="chatMessages"
                >
                    <!-- Empty State -->
                    <template x-if="roomLogs.length === 0">
                        <div class="flex items-center justify-center h-full">
                            <div class="text-center">
                                <i data-lucide="inbox" class="w-16 h-16 text-gray-600 mx-auto mb-4"></i>
                                <p class="text-gray-400">Nenhuma mensagem ainda</p>
                                <p class="text-sm text-gray-500 mt-2">Seja o primeiro a enviar uma mensagem!</p>
                            </div>
                        </div>
                    </template>

                    <!-- Messages -->
                    <template x-for="(log, index) in roomLogs" :key="index">
                        <div>
                            <!-- System Messages -->
                            <template x-if="log.type !== 'user_message'">
                                <div class="flex items-start gap-2 sm:gap-3 py-1 sm:py-2">
                                    <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                                         :class="{
                                            'bg-green-600/20': log.type === 'success',
                                            'bg-blue-600/20': log.type === 'info',
                                            'bg-yellow-600/20': log.type === 'warning',
                                            'bg-red-600/20': log.type === 'error'
                                         }">
                                        <i :data-lucide="log.type === 'success' ? 'check' : log.type === 'error' ? 'x' : 'info'"
                                           class="w-3.5 h-3.5 sm:w-4 sm:h-4"
                                           :class="{
                                               'text-green-400': log.type === 'success',
                                               'text-blue-400': log.type === 'info',
                                               'text-yellow-400': log.type === 'warning',
                                               'text-red-400': log.type === 'error'
                                           }"></i>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="text-xs sm:text-sm text-gray-300 leading-relaxed break-words overflow-wrap-anywhere" x-html="log.message"></div>
                                        <p class="text-xs text-gray-600 mt-1" x-text="new Date(log.timestamp).toLocaleTimeString('pt-BR')"></p>
                                    </div>
                                </div>
                            </template>

                            <!-- User Messages -->
                            <template x-if="log.type === 'user_message'">
                                <div class="flex items-start gap-2 sm:gap-3 py-1 sm:py-2"
                                     :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'flex-row-reverse'">
                                    <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
                                        <span class="text-white text-xs font-bold uppercase"
                                              x-text="(log.displayName || log.senderName || 'A')[0]"></span>
                                    </div>
                                    <div class="flex-1 min-w-0 max-w-[85%] sm:max-w-lg">
                                        <div class="mb-1"
                                             :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'text-right'">
                                            <span class="text-xs sm:text-sm font-semibold"
                                                  :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) ? 'text-purple-400' : 'text-gray-300'"
                                                  x-text="log.displayName || log.senderName || 'Anônimo'"></span>
                                        </div>
                                        <div class="rounded-lg px-3 py-2 sm:px-4 sm:py-2 break-words overflow-wrap-anywhere text-xs sm:text-sm"
                                             :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id))
                                                 ? 'bg-gradient-to-r from-purple-600 to-pink-600 text-white'
                                                 : 'bg-gray-800 text-gray-200'"
                                             x-html="log.message"></div>
                                        <div class="mt-1"
                                             :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'text-right'">
                                            <span class="text-xs text-gray-600"
                                                  x-text="new Date(log.timestamp).toLocaleTimeString('pt-BR')"></span>
                                        </div>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </template>

                    <!-- Auto-scroll anchor -->
                    <div x-ref="chatBottom"></div>
                </div>

                <!-- Message Input -->
                <div class="p-3 sm:p-4 border-t border-gray-700/50">
                    <form @submit.prevent="sendMessage()" class="flex gap-2">
                        <input
                            type="text"
                            x-model="message"
                            placeholder="Digite sua mensagem..."
                            class="flex-1 min-w-0 bg-gray-800/50 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base text-white placeholder-gray-500 focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500/50 transition-all"
                            :disabled="!isConnected || !currentRoomId"
                            @keydown.ctrl.enter="sendMessage()"
                        />
                        <button
                            type="submit"
                            class="w-10 h-10 sm:w-auto sm:h-auto sm:px-6 sm:py-3 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 rounded-lg font-medium transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2 flex-shrink-0"
                            :disabled="!isConnected || !currentRoomId || !message.trim()"
                            title="Enviar mensagem"
                        >
                            <i data-lucide="send" class="w-4 h-4"></i>
                            <span class="hidden sm:inline text-sm">Enviar</span>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Right: Participants Sidebar -->
            <!-- Desktop: sempre visível como sidebar | Mobile: visível quando mobileView === 'participants' -->
            <div class="flex-col md:w-64 md:border-l border-gray-700/50"
                 :class="mobileView === 'participants' ? 'flex flex-1' : 'hidden md:flex'">
                <!-- Header (hidden on mobile - já tem o switch) -->
                <div class="hidden md:flex items-center justify-between p-4 border-b border-gray-700/50">
                    <div class="flex items-center gap-2">
                        <i data-lucide="users" class="w-5 h-5 text-blue-400"></i>
                        <h3 class="font-bold text-white">Participantes</h3>
                        <span class="px-2 py-0.5 bg-gray-700 rounded-full text-xs text-gray-300" x-text="roomParticipants.length"></span>
                    </div>
                </div>

                <!-- Participants List -->
                <div class="flex-1 p-3 sm:p-4 space-y-2 overflow-y-auto custom-scrollbar">
                    <template x-if="roomParticipants.length === 0">
                        <div class="text-center py-8">
                            <i data-lucide="user-x" class="w-12 h-12 text-gray-600 mx-auto mb-3"></i>
                            <p class="text-sm text-gray-400">Nenhum participante</p>
                        </div>
                    </template>

                    <template x-for="participant in roomParticipants" :key="participant.clientId">
                        <div 
                            @click="viewParticipantProfile(participant)"
                            class="flex items-center gap-3 p-3 rounded-lg transition-all cursor-pointer hover:bg-gray-700/50"
                            :class="participant.clientId === socket?.id ? 'bg-purple-900/30 border border-purple-700/50' : 'bg-gray-800/40'"
                            title="Clique para ver perfil">
                            <div class="relative">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center">
                                    <span class="text-white text-sm font-bold uppercase"
                                          x-text="(participant.name || 'A')[0]"></span>
                                </div>
                                <div class="absolute -bottom-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-gray-900"></div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2">
                                    <p class="text-sm font-medium text-white truncate" x-text="participant.name || 'Anônimo'"></p>
                                    <template x-if="participant.clientId === socket?.id">
                                        <span class="px-2 py-0.5 bg-purple-600/30 text-purple-300 rounded-full text-xs font-medium">Você</span>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>

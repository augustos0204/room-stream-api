<!-- Chat Modal (Bottom Sheet on Mobile, Modal on Desktop) - SINGLE ROOM -->
<div
    x-show="showChatModal && currentRoomId"
    class="fixed inset-0 z-50 md:flex md:items-center md:justify-center md:p-4"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
>
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm" @click="showChatModal = false"></div>

    <!-- Bottom Sheet (Mobile) / Modal (Desktop) -->
    <div
        x-ref="chatSheet"
        class="
            fixed inset-x-0 bottom-0 
            h-[80vh] rounded-t-3xl
            md:relative md:inset-auto
            md:w-full md:max-w-5xl md:h-[85vh] md:max-h-none md:rounded-xl
            dark-glass border-t md:border border-gray-700/50
            flex flex-col overflow-hidden
        "
        data-fullheight-sheet="true"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="translate-y-full md:opacity-0 md:scale-95 md:translate-y-0"
        x-transition:enter-end="translate-y-0 md:opacity-100 md:scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="translate-y-0 md:opacity-100 md:scale-100"
        x-transition:leave-end="translate-y-full md:opacity-0 md:scale-95 md:translate-y-0"
        @click.stop
        x-data="{ mobileView: 'messages' }"
    >
        <!-- Drag Handle (Mobile Only) - Swipe area -->
        <div 
            class="md:hidden flex justify-center py-3 cursor-grab active:cursor-grabbing flex-shrink-0"
            @touchstart="handleSheetTouchStart($event)"
            @touchmove="handleSheetTouchMove($event, $refs.chatSheet)"
            @touchend="handleSheetTouchEnd($event, $refs.chatSheet, 'showChatModal')"
        >
            <div class="w-12 h-1.5 rounded-full bg-gray-600 transition-colors hover:bg-gray-400"></div>
        </div>

        <!-- Header -->
        <div class="flex items-center justify-between p-3 sm:p-4 border-b border-gray-700/50 bg-gray-900/50">
            <div class="flex items-center gap-2 sm:gap-3 md:gap-4 flex-1 min-w-0">
                <div class="w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 rounded-full bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="hash" class="w-5 h-5 sm:w-5.5 sm:h-5.5 md:w-6 md:h-6 text-white"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <h2 class="text-base sm:text-lg font-bold text-white truncate" x-text="currentRoomName"></h2>
                    <p class="text-xs sm:text-sm text-gray-400 truncate">
                        <span x-text="roomParticipants.length"></span>
                        <span x-text="roomParticipants.length === 1 ? 'participante' : 'participantes'"></span>
                    </p>
                </div>
            </div>

            <div class="flex items-center gap-1 sm:gap-2 flex-shrink-0">
                <!-- Connect Button (if not connected) -->
                <template x-if="!isConnected">
                    <button
                        @click="connect()"
                        class="px-3 sm:px-4 py-1.5 sm:py-2 bg-green-600 hover:bg-green-700 rounded-lg text-xs sm:text-sm font-medium transition-colors flex items-center gap-1.5 sm:gap-2"
                    >
                        <i data-lucide="wifi" class="w-3.5 h-3.5 sm:w-4 sm:h-4"></i>
                        <span class="hidden sm:inline">Conectar</span>
                    </button>
                </template>

                <!-- Join Room Button (if connected but not in current room) -->
                <template x-if="isConnected && getCurrentActiveRoom() && !getCurrentActiveRoom().joined">
                    <button
                        @click="joinRoom()"
                        class="px-3 sm:px-4 py-1.5 sm:py-2 bg-purple-600 hover:bg-purple-700 rounded-lg text-xs sm:text-sm font-medium transition-colors flex items-center gap-1.5 sm:gap-2"
                    >
                        <i data-lucide="log-in" class="w-3.5 h-3.5 sm:w-4 sm:h-4"></i>
                        <span class="hidden sm:inline">Entrar</span>
                    </button>
                </template>

                <!-- Leave Room Button (if in current room) -->
                <template x-if="isConnected && getCurrentActiveRoom() && getCurrentActiveRoom().joined">
                    <button
                        @click="leaveRoom()"
                        class="px-3 sm:px-4 py-1.5 sm:py-2 bg-red-600 hover:bg-red-700 rounded-lg text-xs sm:text-sm font-medium transition-colors flex items-center gap-1.5 sm:gap-2"
                    >
                        <i data-lucide="log-out" class="w-3.5 h-3.5 sm:w-4 sm:h-4"></i>
                        <span class="hidden sm:inline">Sair</span>
                    </button>
                </template>

                <!-- Close Modal Button -->
                <button
                    @click="showChatModal = false"
                    class="p-1.5 sm:p-2 hover:bg-gray-700/50 rounded-lg transition-colors"
                    title="Fechar (mantém salas abertas)"
                >
                    <i data-lucide="minimize-2" class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400"></i>
                </button>
            </div>
        </div>

        <!-- Mobile View Switch (below header) -->
        <div class="md:hidden flex items-center border-b border-gray-700/50 bg-gray-900/30 relative">
            <button
                @click="mobileView = 'messages'"
                class="flex-1 flex items-center justify-center gap-2 py-3 px-4 transition-all duration-200 relative z-10"
                :class="mobileView === 'messages' 
                    ? 'text-white' 
                    : 'text-gray-400 hover:text-gray-200'"
            >
                <i data-lucide="message-square" class="w-4 h-4"></i>
                <span class="text-sm font-medium">Mensagens</span>
            </button>
            <button
                @click="mobileView = 'participants'"
                class="flex-1 flex items-center justify-center gap-2 py-3 px-4 transition-all duration-200 relative z-10"
                :class="mobileView === 'participants' 
                    ? 'text-white' 
                    : 'text-gray-400 hover:text-gray-200'"
            >
                <i data-lucide="users" class="w-4 h-4"></i>
                <span class="text-sm font-medium">Participantes</span>
                <span 
                    class="px-1.5 py-0.5 rounded-full text-xs font-bold min-w-[20px] text-center transition-colors duration-200"
                    :class="mobileView === 'participants' ? 'bg-blue-600 text-white' : 'bg-gray-700 text-gray-300'"
                    x-text="roomParticipants.length"
                ></span>
            </button>
            
            <!-- Animated Indicator Bar with Glow -->
            <div 
                class="absolute bottom-0 left-0 h-0.5 w-1/2 transition-all duration-300 ease-out"
                :class="mobileView === 'participants' && 'translate-x-full'"
            >
                <div 
                    class="h-full w-full transition-all duration-300 animate-pulse"
                    :class="mobileView === 'messages' 
                        ? 'bg-gradient-to-r from-green-600 to-emerald-600 shadow-[0_0_10px_rgba(34,197,94,0.5),0_0_20px_rgba(34,197,94,0.3),0_0_30px_rgba(34,197,94,0.1)]' 
                        : 'bg-gradient-to-r from-blue-600 to-cyan-600 shadow-[0_0_10px_rgba(59,130,246,0.5),0_0_20px_rgba(59,130,246,0.3),0_0_30px_rgba(59,130,246,0.1)]'"
                ></div>
            </div>
        </div>

        <!-- Chat Content (2 columns) -->
        <div class="flex flex-1 overflow-hidden">

            <!-- Left: Messages -->
            <div class="flex-1 flex flex-col relative"
                 :class="mobileView === 'participants' && 'hidden md:flex'">

                <!-- Messages List -->
                <div
                    class="flex-1 overflow-y-auto overflow-x-hidden custom-scrollbar p-3 sm:p-4 space-y-2 sm:space-y-3 relative"
                    x-ref="chatMessages"
                    @scroll="handleChatScroll($event)"
                    x-effect="if (roomLogs.length && autoScroll) { $nextTick(() => $el.scrollTo({ top: $el.scrollHeight, behavior: 'smooth' })) }"
                >
                    <!-- Empty State -->
                    <template x-if="roomLogs.length === 0">
                        <div class="flex items-center justify-center h-full">
                            <div class="text-center">
                                <i data-lucide="inbox" class="w-16 h-16 text-gray-600 mx-auto mb-4"></i>
                                <p class="text-gray-400">Nenhuma mensagem ainda</p>
                                <p class="text-sm text-gray-500 mt-2">Seja o primeiro a enviar uma mensagem!</p>
                            </div>
                        </div>
                    </template>

                    <!-- Messages -->
                    <template x-for="(log, index) in roomLogs" :key="index">
                        <div>
                            <!-- System Messages -->
                            <template x-if="log.type !== 'user_message'">
                                <div class="flex items-start gap-2 sm:gap-3 py-1 sm:py-2">
                                    <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                                         :class="{
                                            'bg-green-600/20': log.type === 'success',
                                            'bg-blue-600/20': log.type === 'info',
                                            'bg-yellow-600/20': log.type === 'warning',
                                            'bg-red-600/20': log.type === 'error'
                                         }">
                                        <i :data-lucide="log.type === 'success' ? 'check' : log.type === 'error' ? 'x' : 'info'"
                                           class="w-3.5 h-3.5 sm:w-4 sm:h-4"
                                           :class="{
                                               'text-green-400': log.type === 'success',
                                               'text-blue-400': log.type === 'info',
                                               'text-yellow-400': log.type === 'warning',
                                               'text-red-400': log.type === 'error'
                                           }"></i>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="text-xs sm:text-sm text-gray-300 leading-relaxed break-words overflow-wrap-anywhere" x-html="log.message"></div>
                                        <p class="text-xs text-gray-600 mt-1" x-text="new Date(log.timestamp).toLocaleTimeString('pt-BR')"></p>
                                    </div>
                                </div>
                            </template>

                            <!-- User Messages -->
                            <template x-if="log.type === 'user_message'">
                                <div class="flex items-start gap-2 sm:gap-3 py-1 sm:py-2"
                                     :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'flex-row-reverse'">
                                    <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
                                        <span class="text-white text-xs font-bold uppercase"
                                              x-text="(log.displayName || log.senderName || 'A')[0]"></span>
                                    </div>
                                    <div class="flex-1 min-w-0 max-w-[85%] sm:max-w-lg">
                                        <div class="mb-1 flex items-center gap-2 flex-wrap"
                                             :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'flex-row-reverse text-right'">
                                            <span class="text-xs sm:text-sm font-semibold"
                                                  :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) ? 'text-purple-400' : 'text-gray-300'"
                                                  x-text="log.displayName || log.senderName || 'Anônimo'"></span>
                                            <!-- Event Badge (shown when event is not 'message') -->
                                            <template x-if="log.eventName && log.eventName !== 'message'">
                                                <span class="px-1.5 py-0.5 text-[10px] font-medium rounded bg-gradient-to-r from-cyan-600 to-blue-600 text-white uppercase tracking-wide"
                                                      x-text="log.eventName"></span>
                                            </template>
                                        </div>
                                        <div class="rounded-lg px-3 py-2 sm:px-4 sm:py-2 break-words overflow-wrap-anywhere text-xs sm:text-sm"
                                             :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id))
                                                 ? 'bg-gradient-to-r from-purple-600 to-pink-600 text-white'
                                                 : 'bg-gray-800 text-gray-200'"
                                             x-html="log.message"></div>
                                        <div class="mt-1"
                                             :class="(log.senderId === socket?.id || (log.supabaseUser && supabaseUser?.id === log.supabaseUser.id)) && 'text-right'">
                                            <span class="text-xs text-gray-600"
                                                  x-text="new Date(log.timestamp).toLocaleTimeString('pt-BR')"></span>
                                        </div>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </template>

                    <!-- Auto-scroll anchor -->
                    <div x-ref="chatBottom"></div>
                </div>

                <!-- Scroll to Bottom Button (appears when autoScroll is disabled) -->
                <div 
                    x-show="!autoScroll && roomLogs.length > 0"
                    x-transition:enter="transition ease-out duration-200"
                    x-transition:enter-start="opacity-0 translate-y-2"
                    x-transition:enter-end="opacity-100 translate-y-0"
                    x-transition:leave="transition ease-in duration-150"
                    x-transition:leave-start="opacity-100 translate-y-0"
                    x-transition:leave-end="opacity-0 translate-y-2"
                    x-effect="if (!autoScroll && typeof lucide !== 'undefined') { $nextTick(() => lucide.createIcons()) }"
                    class="absolute bottom-20 left-1/2 -translate-x-1/2 z-10"
                >
                    <button
                        @click="scrollToBottom(true)"
                        class="relative flex items-center gap-2 px-4 py-2 bg-gray-800/90 hover:bg-gray-700 border border-gray-600 rounded-full shadow-lg backdrop-blur-sm transition-all duration-200 group"
                        title="Voltar ao final"
                    >
                        <i data-lucide="arrow-down" class="w-4 h-4 text-gray-300 group-hover:text-white"></i>
                        <span class="text-sm text-gray-300 group-hover:text-white">Novas mensagens</span>
                        
                        <!-- Contador circular de mensagens não lidas -->
                        <span
                            x-show="unreadWhileScrolled > 0"
                            x-transition:enter="transition ease-out duration-200"
                            x-transition:enter-start="scale-0 opacity-0"
                            x-transition:enter-end="scale-100 opacity-100"
                            x-transition:leave="transition ease-in duration-150"
                            x-transition:leave-start="scale-100 opacity-100"
                            x-transition:leave-end="scale-0 opacity-0"
                            class="absolute -top-2 -right-2 min-w-[22px] h-[22px] flex items-center justify-center px-1.5 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-xs font-bold rounded-full shadow-lg ring-2 ring-gray-800"
                            x-text="unreadWhileScrolled > 99 ? '99+' : unreadWhileScrolled"
                        ></span>
                    </button>
                </div>

                <!-- Message Input -->
                <div class="p-3 sm:p-4 border-t border-gray-700/50">
                    <!-- Current Event Indicator (when not 'message') -->
                    <div 
                        x-show="currentEvent !== 'message'"
                        x-transition
                        x-effect="if (currentEvent !== 'message' && typeof lucide !== 'undefined') { $nextTick(() => lucide.createIcons()) }"
                        class="mb-2 flex items-center gap-2"
                    >
                        <span class="text-xs text-gray-400">Enviando como:</span>
                        <span class="px-2 py-0.5 text-xs font-medium rounded bg-gradient-to-r from-cyan-600 to-blue-600 text-white uppercase tracking-wide"
                              x-text="currentEvent"></span>
                        <button 
                            @click="currentEvent = 'message'"
                            class="text-xs text-gray-500 hover:text-gray-300 transition-colors"
                            title="Voltar para mensagem padrão"
                        >
                            <i data-lucide="x" class="w-3 h-3"></i>
                        </button>
                    </div>
                    
                    <form @submit.prevent="sendMessage(); $nextTick(() => $refs.chatInput?.focus())" class="flex gap-2">
                        <input
                            type="text"
                            x-ref="chatInput"
                            x-model="message"
                            :placeholder="currentEvent === 'message' ? 'Digite sua mensagem...' : `Digite o conteúdo do evento [${currentEvent}]...`"
                            class="flex-1 min-w-0 bg-gray-800/50 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 sm:py-3 text-sm sm:text-base text-white placeholder-gray-500 focus:outline-none focus:border-green-500 focus:ring-2 focus:ring-green-500/50 transition-all"
                            :disabled="!isConnected || !currentRoomId"
                            @keydown.ctrl.enter="sendMessage(); $nextTick(() => $refs.chatInput?.focus())"
                        />
                        
                        <!-- Event Options Button -->
                        <div class="relative flex" @click.outside="showEventMenu = false">
                            <button
                                type="button"
                                @click="showEventMenu = !showEventMenu; $nextTick(() => { if (typeof lucide !== 'undefined') lucide.createIcons() })"
                                class="w-10 sm:w-11 h-full bg-gray-700 hover:bg-gray-600 rounded-lg transition-all duration-200 flex items-center justify-center flex-shrink-0"
                                :class="showEventMenu && 'ring-2 ring-cyan-500'"
                                title="Opções de evento"
                            >
                                <i data-lucide="settings-2" class="w-4 h-4 text-gray-300"></i>
                            </button>
                            
                            <!-- Floating Menu -->
                            <div 
                                x-show="showEventMenu"
                                x-transition:enter="transition ease-out duration-200"
                                x-transition:enter-start="opacity-0 translate-y-2"
                                x-transition:enter-end="opacity-100 translate-y-0"
                                x-transition:leave="transition ease-in duration-150"
                                x-transition:leave-start="opacity-100 translate-y-0"
                                x-transition:leave-end="opacity-0 translate-y-2"
                                class="fixed inset-x-3 bottom-24 sm:absolute sm:inset-auto sm:bottom-12 sm:right-0 sm:w-64 bg-gray-800 border border-gray-700 rounded-xl shadow-2xl overflow-hidden z-20"
                            >
                                <!-- Header -->
                                <div class="px-4 py-3 border-b border-gray-700 bg-gray-900/50">
                                    <h4 class="text-sm font-semibold text-white flex items-center gap-2">
                                        <i data-lucide="radio" class="w-4 h-4 text-cyan-400"></i>
                                        Tipo de Evento
                                    </h4>
                                    <p class="text-xs text-gray-500 mt-1">Selecione ou crie um evento customizado</p>
                                </div>
                                
                                <!-- Recent Events -->
                                <div class="p-2 max-h-40 overflow-y-auto custom-scrollbar">
                                    <template x-for="event in recentEvents" :key="event">
                                        <button
                                            type="button"
                                            @click="setCurrentEvent(event)"
                                            class="w-full px-3 py-2 text-left text-sm rounded-lg transition-all flex items-center gap-2 group"
                                            :class="currentEvent === event 
                                                ? 'bg-gradient-to-r from-cyan-600 to-blue-600 text-white' 
                                                : 'text-gray-300 hover:bg-gray-700'"
                                        >
                                            <i data-lucide="zap" class="w-4 h-4" :class="currentEvent === event ? 'text-white' : 'text-gray-500 group-hover:text-cyan-400'"></i>
                                            <span x-text="event" class="font-mono"></span>
                                            <span x-show="event === 'message'" class="ml-auto text-xs opacity-60">(padrão)</span>
                                        </button>
                                    </template>
                                </div>
                                
                                <!-- Divider -->
                                <div class="border-t border-gray-700"></div>
                                
                                <!-- Custom Event Input -->
                                <div class="p-3">
                                    <label class="text-xs text-gray-400 mb-2 block">Evento customizado</label>
                                    <div class="flex gap-2 items-center">
                                        <input
                                            type="text"
                                            x-model="customEventInput"
                                            @keydown.enter.prevent="setCustomEvent()"
                                            placeholder="ex: typing..."
                                            class="flex-1 min-w-0 px-3 py-2 bg-gray-900 border border-gray-700 rounded-lg text-sm text-white placeholder-gray-500 focus:outline-none focus:border-cyan-500 font-mono"
                                        />
                                        <button
                                            type="button"
                                            @click="setCustomEvent()"
                                            class="w-9 h-9 flex-shrink-0 bg-cyan-600 hover:bg-cyan-700 rounded-lg transition-colors flex items-center justify-center"
                                            title="Usar evento"
                                        >
                                            <i data-lucide="check" class="w-4 h-4 text-white"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Send Button -->
                        <button
                            type="button"
                            @click="sendMessage(); $nextTick(() => $refs.chatInput?.focus())"
                            @touchend.prevent="sendMessage(); $nextTick(() => $refs.chatInput?.focus())"
                            class="w-10 sm:w-11 self-stretch bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 rounded-lg font-medium transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center flex-shrink-0"
                            :disabled="!isConnected || !currentRoomId || !message.trim()"
                            title="Enviar mensagem"
                        >
                            <i data-lucide="send" class="w-4 h-4"></i>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Right: Participants Sidebar -->
            <!-- Desktop: sempre visível como sidebar | Mobile: visível quando mobileView === 'participants' -->
            <div class="flex-col md:w-64 md:border-l border-gray-700/50"
                 :class="mobileView === 'participants' ? 'flex flex-1' : 'hidden md:flex'">
                <!-- Header (hidden on mobile - já tem o switch) -->
                <div class="hidden md:flex items-center justify-between p-4 border-b border-gray-700/50">
                    <div class="flex items-center gap-2">
                        <i data-lucide="users" class="w-5 h-5 text-blue-400"></i>
                        <h3 class="font-bold text-white">Participantes</h3>
                        <span class="px-2 py-0.5 bg-gray-700 rounded-full text-xs text-gray-300" x-text="roomParticipants.length"></span>
                    </div>
                </div>

                <!-- Participants List -->
                <div class="flex-1 p-3 sm:p-4 space-y-2 overflow-y-auto custom-scrollbar">
                    <template x-if="roomParticipants.length === 0">
                        <div class="text-center py-8">
                            <i data-lucide="user-x" class="w-12 h-12 text-gray-600 mx-auto mb-3"></i>
                            <p class="text-sm text-gray-400">Nenhum participante</p>
                        </div>
                    </template>

                    <template x-for="participant in roomParticipants" :key="participant.clientId">
                        <div 
                            @click="viewParticipantProfile(participant)"
                            class="flex items-center gap-3 p-3 rounded-lg transition-all cursor-pointer hover:bg-gray-700/50"
                            :class="participant.clientId === socket?.id ? 'bg-purple-900/30 border border-purple-700/50' : 'bg-gray-800/40'"
                            title="Clique para ver perfil">
                            <div class="relative">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center">
                                    <span class="text-white text-sm font-bold uppercase"
                                          x-text="(participant.name || 'A')[0]"></span>
                                </div>
                                <div class="absolute -bottom-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-gray-900"></div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center gap-2">
                                    <p class="text-sm font-medium text-white truncate" x-text="participant.name || 'Anônimo'"></p>
                                    <template x-if="participant.clientId === socket?.id">
                                        <span class="px-2 py-0.5 bg-purple-600/30 text-purple-300 rounded-full text-xs font-medium">Você</span>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rooms Page -->
<div class="space-y-6 animate-fade-in">

    <!-- Rooms List -->
    <div class="dark-glass rounded-xl border border-gray-700/50">
        <div class="flex items-center justify-between p-6 border-b border-gray-700/50">
            <div class="flex items-center gap-3">
                <i data-lucide="layout-grid" class="w-5 h-5 text-purple-400"></i>
                <h2 class="text-xl font-bold text-white">
                    Salas Disponíveis
                    <span class="ml-2 text-sm font-normal text-gray-400">(<span x-text="rooms.length"></span>)</span>
                </h2>
            </div>

            <button
                @click="listRooms()"
                class="p-2 hover:bg-gray-700/50 rounded-lg transition-colors"
                :disabled="isLoadingRooms"
                title="Atualizar lista"
            >
                <i data-lucide="refresh-cw" class="w-5 h-5 text-gray-400" :class="isLoadingRooms && 'animate-spin'"></i>
            </button>
        </div>

        <div class="p-6">
            <!-- Loading State -->
            <template x-if="isLoadingRooms">
                <div class="text-center py-12">
                    <i data-lucide="loader-2" class="w-12 h-12 text-purple-500 mx-auto mb-4 animate-spin"></i>
                    <p class="text-gray-400">Carregando salas...</p>
                </div>
            </template>

            <!-- Empty State -->
            <template x-if="!isLoadingRooms && rooms.length === 0">
                <div class="text-center py-12">
                    <i data-lucide="inbox" class="w-16 h-16 text-gray-600 mx-auto mb-4"></i>
                    <h3 class="text-lg font-semibold text-white mb-2">Nenhuma sala disponível</h3>
                    <p class="text-gray-400 mb-6">Crie a primeira sala para começar!</p>
                    <button
                        @click="showCreateRoomModal = true"
                        class="px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 rounded-lg font-medium transition-all duration-200"
                    >
                        Criar Sala
                    </button>
                </div>
            </template>

            <!-- Rooms Grid -->
            <template x-if="!isLoadingRooms && rooms.length > 0">
                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
                    <template x-for="room in rooms" :key="room.id">
                        <div class="group bg-gray-800/40 hover:bg-gray-800/60 rounded-xl p-6 border border-gray-700/30 hover:border-purple-500/50 transition-all duration-300 cursor-pointer"
                             :class="currentRoomId === room.id && 'ring-2 ring-purple-500/50 border-purple-500/50'">

                            <!-- Room Header -->
                            <div class="flex items-start justify-between mb-4">
                                <div class="flex items-center gap-3 flex-1 min-w-0">
                                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
                                        <i data-lucide="hash" class="w-6 h-6 text-white"></i>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="text-lg font-bold text-white truncate group-hover:text-purple-300 transition-colors"
                                            x-text="room.name"></h3>
                                        <p class="text-xs text-gray-500 font-mono truncate" x-text="room.id"></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Room Stats -->
                            <div class="flex items-center gap-4 mb-4 text-sm">
                                <div class="flex items-center gap-2">
                                    <i data-lucide="users" class="w-4 h-4 text-gray-500"></i>
                                    <span class="text-gray-300">
                                        <span x-text="room.participants.length"></span>
                                        <span class="text-gray-500" x-text="room.participants.length === 1 ? 'pessoa' : 'pessoas'"></span>
                                    </span>
                                </div>

                                <template x-if="room.participants.length > 0">
                                    <div class="flex items-center gap-2">
                                        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                                        <span class="text-green-400 text-xs font-medium">Ativa</span>
                                    </div>
                                </template>
                            </div>

                            <!-- Participants Preview -->
                            <template x-if="room.participants.length > 0">
                                <div class="mb-4">
                                    <p class="text-xs text-gray-500 mb-2">Participantes:</p>
                                    <div class="flex flex-wrap gap-2">
                                        <template x-for="participant in room.participants.slice(0, 3)" :key="participant.clientId">
                                            <div class="flex items-center gap-1 px-2 py-1 bg-gray-700/50 rounded-full text-xs">
                                                <i data-lucide="user" class="w-3 h-3 text-gray-400"></i>
                                                <span class="text-gray-300" x-text="participant.name || 'Anônimo'"></span>
                                            </div>
                                        </template>
                                        <template x-if="room.participants.length > 3">
                                            <div class="px-2 py-1 bg-gray-700/50 rounded-full text-xs text-gray-400">
                                                +<span x-text="room.participants.length - 3"></span>
                                            </div>
                                        </template>
                                    </div>
                                </div>
                            </template>

                            <!-- Action Buttons -->
                            <div class="flex gap-2">
                                <button
                                    @click="openRoom(room.id, room.name)"
                                    class="flex-1 flex items-center justify-center gap-2 px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 rounded-lg font-medium text-white transition-all duration-200"
                                >
                                    <i data-lucide="log-in" class="w-4 h-4"></i>
                                    <span x-text="currentRoomId === room.id ? 'Abrir' : 'Entrar'"></span>
                                </button>

                                <button
                                    @click.stop="deleteRoom(room.id)"
                                    class="p-2 bg-red-600/20 hover:bg-red-600/30 border border-red-700/50 rounded-lg transition-colors"
                                    title="Excluir sala"
                                >
                                    <i data-lucide="trash-2" class="w-4 h-4 text-red-400"></i>
                                </button>
                            </div>

                            <!-- Current Room Indicator -->
                            <template x-if="currentRoomId === room.id">
                                <div class="mt-4 pt-4 border-t border-gray-700/50">
                                    <div class="flex items-center gap-2 text-sm text-purple-400">
                                        <i data-lucide="check-circle" class="w-4 h-4"></i>
                                        <span class="font-medium">Sala atual</span>
                                    </div>
                                </div>
                            </template>
                        </div>
                    </template>
                </div>
            </template>
        </div>
    </div>
</div>

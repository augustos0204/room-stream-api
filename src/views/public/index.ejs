<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= appName || 'RoomStream' %> - Platform</title>
    <link rel="icon" type="image/svg+xml" href="/view/assets/media/favicon.svg">

    <!-- External Dependencies -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'pulse-fast': 'pulse 1s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.3s ease-out',
                        'float': 'float 2.5s ease-in-out infinite',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0', transform: 'translateY(10px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' }
                        },
                        slideUp: {
                            '0%': { opacity: '0', transform: 'translateY(20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' }
                        },
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-4px)' }
                        }
                    }
                }
            }
        }
    </script>

    <!-- Styles -->
    <link rel="stylesheet" href="/view/assets/styles/main.css">

    <!-- Centralized Configuration -->
    <%
    const config = {
        supabaseUrl: supabaseUrl || null,
        supabaseAnonKey: supabaseAnonKey || null,
        wsNamespace: wsNamespace || '/ws/rooms',
        // API_KEY removida do servidor - carregada do localStorage
        appName: appName || 'RoomStream',
        appVersion: appVersion || '1.0.0',
        environment: process.env.NODE_ENV || 'development'
    };

    const features = {
        supabaseAuth: !!(supabaseUrl && supabaseAnonKey),
        // API Key auth disponível apenas se configurada no backend
        apiKeyAuth: !!apiKey
    };
    %>

    <script>
        // Centralized configuration
        window.ENV = <%- JSON.stringify(config) %>;
        
        // Available authentication methods
        window.AUTH_FEATURES = <%- JSON.stringify(features) %>;

        // Pre-loaded initial data
        window.INITIAL_DATA = {
            rooms: <%- JSON.stringify(initialRooms || []) %>,
            serverTime: '<%= serverTime || new Date().toISOString() %>',
            timestamp: Date.now()
        };
    </script>

    <% if (features.supabaseAuth) { %>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <% } %>
</head>

<body class="bg-gradient-to-br from-slate-950 via-purple-950 to-indigo-950 text-white font-mono min-h-screen overflow-hidden"
      x-data="platformApp()"
      x-init="init()">

    <!-- Skip to main content -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-purple-600 px-4 py-2 rounded z-50">
        Pular para conteúdo principal
    </a>

    <!-- Full Screen Login Page (quando não autenticado) -->
    <div 
        x-show="!apiKey && !supabaseUser"
        x-transition:enter="transition ease-out duration-500"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
    >
        <%- include('../partials/page-login', { features: features }) %>
    </div>

    <!-- Platform Interface (quando autenticado) -->
    <div x-show="apiKey || supabaseUser" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100">

    <!-- Platform Topbar (Fixed at Top) -->
    <%- include('../partials/platform-topbar', { features: features }) %>

    <!-- Platform Sidebar (Below Topbar) -->
    <%- include('../partials/platform-sidebar') %>

    <!-- Main Content Area -->
    <main
        id="main-content"
        class="transition-all duration-300 pt-[73px] ml-0 lg:ml-16"
        :class="sidebarPinned && sidebarExpanded ? 'lg:ml-64' : 'lg:ml-16'"
    >
        <div class="p-6 h-[calc(100vh-5rem)] overflow-y-auto custom-scrollbar">

            <!-- Dashboard Page (Main/Default) -->
            <div x-show="currentPage === 'dashboard'" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 transform translate-y-4" x-transition:enter-end="opacity-100 transform translate-y-0">
                <%- include('../partials/page-dashboard') %>
            </div>

            <!-- Rooms Page -->
            <div x-show="currentPage === 'rooms'" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 transform translate-y-4" x-transition:enter-end="opacity-100 transform translate-y-0">
                <%- include('../partials/page-rooms') %>
            </div>

            <!-- Settings Page -->
            <div x-show="currentPage === 'settings'" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 transform translate-y-4" x-transition:enter-end="opacity-100 transform translate-y-0">
                <div class="dark-glass rounded-xl border border-gray-700/50 p-12 text-center max-w-2xl mx-auto">
                    <i data-lucide="settings" class="w-20 h-20 text-gray-600 mx-auto mb-6"></i>
                    <h2 class="text-2xl font-bold text-white mb-3">Configurações</h2>
                    <p class="text-gray-400">Em breve...</p>
                </div>
            </div>

        </div>
    </main>

    <!-- Modals -->
    <%- include('../partials/modal-create-room') %>
    <%- include('../partials/modal-chat') %>
    <%- include('../partials/modal-shortcuts') %>

    </div>
    <!-- End Platform Interface -->

    <!-- Profile Modal -->
    <%- include('../partials/modal-profile', { features: features }) %>

    <!-- Load utilities and app -->
    <script src="/view/assets/scripts/sanitizer.js"></script>
    <script src="/view/assets/scripts/toast.js"></script>
    <script src="/view/assets/scripts/platform.js"></script>

    <!-- Initialize Lucide icons after Alpine loads -->
    <script>
        document.addEventListener('alpine:init', () => {
            setTimeout(() => {
                if (typeof lucide !== 'undefined') {
                    lucide.createIcons();
                }
            }, 100);
        });

        // Re-initialize icons on DOM changes (for modals and transitions)
        setInterval(() => {
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }
        }, 1000);
    </script>
</body>
</html>

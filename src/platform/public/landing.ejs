<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <% const isDev = process.env.NODE_ENV !== 'production'; %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Theme color para barra de sistema no mobile (Android/iOS) -->
    <meta name="theme-color" content="<%= isDev ? '#ea580c' : '#1e1b4b' %>">
    <meta name="color-scheme" content="dark">
    <meta name="msapplication-navbutton-color" content="<%= isDev ? '#ea580c' : '#1e1b4b' %>">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="mobile-web-app-capable" content="yes">
    
    <!-- PWA Manifest (backend decide qual retornar baseado em NODE_ENV) -->
    <link rel="manifest" href="/platform/assets/manifest.json">
    
    <title>RoomStream API<%= isDev ? ' (DEV)' : '' %> - Real-time Data & Room Management</title>
    <meta name="description" content="API WebSocket em tempo real para gerenciamento de salas com NestJS, Socket.IO e Redis.">
    <link rel="icon" type="image/svg+xml" href="/platform/assets/media/<%= isDev ? 'favicon-dev.svg' : 'favicon.svg' %>">
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'float': 'float 3s ease-in-out infinite',
                        'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'fade-in': 'fadeIn 0.8s ease-out',
                        'slide-up': 'slideUp 0.5s ease-out',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-20px)' }
                        },
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' }
                        },
                        slideUp: {
                            '0%': { opacity: '0', transform: 'translateY(30px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' }
                        }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/platform/assets/styles/main.css">
</head>

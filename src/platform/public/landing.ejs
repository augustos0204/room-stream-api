    <!-- Developer Section -->
    <%
    const github = typeof githubUser !== 'undefined' ? githubUser : null;
    const repos = typeof githubRepos !== 'undefined' ? githubRepos : [];
    const languages = typeof topLanguages !== 'undefined' ? topLanguages : [];
    const socials = typeof socialAccounts !== 'undefined' ? socialAccounts : [];
    
    const devName = github?.name || 'Desenvolvedor';
    const devBio = github?.bio || 'Desenvolvedor apaixonado por tecnologia';
    const devAvatar = github?.avatar_url || 'https://github.com/identicons/default.png';
    const devLocation = github?.location || null;
    const devCompany = github?.company || null;
    const devBlog = github?.blog || null;
    const devPublicRepos = github?.public_repos || 0;
    const devFollowers = github?.followers || 0;
    const devGithubUrl = github?.html_url || 'https://github.com';
    
    // Mapeamento de providers para ícones e cores
    const socialConfig = {
        'linkedin': { icon: 'linkedin', label: 'LinkedIn', hoverColor: 'hover:bg-blue-600' },
        'twitter': { icon: 'twitter', label: 'Twitter', hoverColor: 'hover:bg-sky-500' },
        'youtube': { icon: 'youtube', label: 'YouTube', hoverColor: 'hover:bg-red-600' },
        'instagram': { icon: 'instagram', label: 'Instagram', hoverColor: 'hover:bg-pink-600' },
        'facebook': { icon: 'facebook', label: 'Facebook', hoverColor: 'hover:bg-blue-700' },
        'mastodon': { icon: 'message-circle', label: 'Mastodon', hoverColor: 'hover:bg-purple-600' },
        'twitch': { icon: 'twitch', label: 'Twitch', hoverColor: 'hover:bg-violet-600' },
        'discord': { icon: 'message-square', label: 'Discord', hoverColor: 'hover:bg-indigo-600' },
        'generic': { icon: 'link', label: 'Link', hoverColor: 'hover:bg-gray-600' },
    };
    %>
    <section class="relative z-10 py-20 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-black mb-4">
                    <span class="bg-gradient-to-r from-violet-400 to-purple-400 bg-clip-text text-transparent">
                        Sobre o Desenvolvedor
                    </span>
                </h2>
                <p class="text-xl text-gray-400">
                    Conheça quem está por trás do RoomStream
                </p>
            </div>

            <div class="glass-effect rounded-2xl border border-white/10 overflow-hidden max-w-4xl mx-auto">
                <div class="flex flex-col md:flex-row">
                    <!-- Avatar & Basic Info -->
                    <div class="md:w-1/3 p-8 bg-gradient-to-br from-violet-900/30 to-purple-900/30 flex flex-col items-center justify-center text-center">
                        <img 
                            src="<%= devAvatar %>" 
                            alt="<%= devName %>"
                            class="w-32 h-32 rounded-full border-4 border-purple-500/50 shadow-xl mb-4"
                        />
                        <h3 class="text-2xl font-bold text-white mb-1"><%= devName %></h3>
                        <p class="text-purple-400 font-medium mb-4">Full Stack Developer</p>
                        
                        <div class="flex flex-wrap justify-center gap-2 text-sm text-gray-400">
                            <% if (devLocation) { %>
                            <span class="flex items-center gap-1">
                                <i data-lucide="map-pin" class="w-3 h-3"></i>
                                <%= devLocation %>
                            </span>
                            <% } %>
                            <% if (devCompany) { %>
                            <span class="flex items-center gap-1">
                                <i data-lucide="building-2" class="w-3 h-3"></i>
                                <%= devCompany %>
                            </span>
                            <% } %>
                        </div>
                    </div>

                    <!-- Bio & Stats -->
                    <div class="md:w-2/3 p-8">
                        <% if (devBio) { %>
                        <p class="text-gray-300 text-lg mb-6 leading-relaxed"><%= devBio %></p>
                        <% } %>

                        <!-- Stats -->
                        <div class="grid grid-cols-2 gap-4 mb-6">
                            <div class="bg-gray-800/50 rounded-lg p-4 text-center">
                                <div class="text-2xl font-bold text-purple-400"><%= devPublicRepos %></div>
                                <div class="text-xs text-gray-400">Repositórios</div>
                            </div>
                            <div class="bg-gray-800/50 rounded-lg p-4 text-center">
                                <div class="text-2xl font-bold text-blue-400"><%= devFollowers %></div>
                                <div class="text-xs text-gray-400">Seguidores</div>
                            </div>
                        </div>

                        <!-- Languages -->
                        <% if (languages.length > 0) { %>
                        <div class="mb-6">
                            <h4 class="text-sm font-semibold text-gray-400 mb-3">Linguagens</h4>
                            <div class="flex flex-wrap gap-2">
                                <% languages.slice(0, 6).forEach(function(lang) { 
                                    const colors = {
                                        'TypeScript': 'bg-blue-500/20 text-blue-300 border-blue-500/50',
                                        'JavaScript': 'bg-yellow-500/20 text-yellow-300 border-yellow-500/50',
                                        'Python': 'bg-green-500/20 text-green-300 border-green-500/50',
                                        'Java': 'bg-orange-500/20 text-orange-300 border-orange-500/50',
                                        'Go': 'bg-cyan-500/20 text-cyan-300 border-cyan-500/50',
                                        'C#': 'bg-purple-500/20 text-purple-300 border-purple-500/50',
                                        'PHP': 'bg-indigo-500/20 text-indigo-300 border-indigo-500/50',
                                    };
                                    const colorClass = colors[lang] || 'bg-gray-500/20 text-gray-300 border-gray-500/50';
                                %>
                                <span class="px-2.5 py-1 rounded-lg border text-xs font-medium <%= colorClass %>">
                                    <%= lang %>
                                </span>
                                <% }); %>
                            </div>
                        </div>
                        <% } %>

                        <!-- Links -->
                        <div class="flex flex-wrap gap-3">
                            <a 
                                href="<%= devGithubUrl %>" 
                                target="_blank"
                                class="flex items-center gap-2 px-4 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg transition-colors text-sm"
                            >
                                <i data-lucide="github" class="w-4 h-4"></i>
                                <span>GitHub</span>
                            </a>
                            <% if (devBlog) { %>
                            <a 
                                href="<%= devBlog.startsWith('http') ? devBlog : 'https://' + devBlog %>" 
                                target="_blank"
                                class="flex items-center gap-2 px-4 py-2 bg-gray-800 hover:bg-purple-600 rounded-lg transition-colors text-sm"
                            >
                                <i data-lucide="globe" class="w-4 h-4"></i>
                                <span>Portfolio</span>
                            </a>
                            <% } %>
                            <% socials.forEach(function(social) { 
                                const config = socialConfig[social.provider] || socialConfig['generic'];
                            %>
                            <a 
                                href="<%= social.url %>" 
                                target="_blank"
                                class="flex items-center gap-2 px-4 py-2 bg-gray-800 <%= config.hoverColor %> rounded-lg transition-colors text-sm"
                            >
                                <i data-lucide="<%= config.icon %>" class="w-4 h-4"></i>
                                <span><%= config.label %></span>
                            </a>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="relative z-10 py-20 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
            <div class="glass-effect rounded-3xl p-12 border border-purple-500/30 text-center">
                <h2 class="text-4xl md:text-5xl font-black mb-6">
                    Pronto para Começar?
                </h2>
                <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
                    Explore a documentação da API ou acesse o dashboard para criar sua primeira sala.

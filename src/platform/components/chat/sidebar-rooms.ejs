<!-- Sidebar - Rooms List Component -->
<div class="<%= isMobile ? 'h-full' : 'w-80 flex-shrink-0' %>">
    <div class="dark-glass rounded-xl shadow-2xl animate-slide-up h-full flex flex-col overflow-hidden">
        <!-- Header with refresh -->
        <div class="flex-shrink-0 p-4 pb-3 border-b border-purple-500/30">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-2">
                    <i data-lucide="users" class="w-5 h-5 text-purple-400"></i>
                    <h2 class="text-lg font-semibold text-purple-400">Salas</h2>
                </div>
                <button @click="listRooms()"
                        class="p-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg text-sm transition-all duration-200 transform hover:scale-105 active:scale-95"
                        title="Atualizar lista de salas">
                    <i data-lucide="refresh-cw" class="w-4 h-4"></i>
                </button>
            </div>
        </div>

        <!-- User Profile -->
        <div class="flex-shrink-0 p-4 border-b border-purple-500/30">
            <div class="flex items-center justify-between mb-2">
                <label class="block text-sm font-medium text-gray-300">Meu Nome</label>
                <span x-show="supabaseUser" class="flex items-center gap-1 text-xs text-green-400">
                    <i data-lucide="shield-check" class="w-3 h-3"></i>
                    Supabase
                </span>
            </div>
            <div class="flex gap-2">
                <div class="flex-1 relative">
                    <i data-lucide="user" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400"></i>
                    <input x-model="participantName"
                           type="text"
                           placeholder="Seu nome"
                           :disabled="!!supabaseUser"
                           @keydown.enter="updateMyName()"
                           class="w-full pl-10 pr-3 py-2 text-white rounded-lg border border-gray-600 focus:border-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-400/20 transition-all disabled:opacity-60 disabled:cursor-not-allowed"
                           :class="supabaseUser ? 'bg-gray-800' : 'bg-gray-700'">
                </div>
                <button @click="updateMyName()"
                        :disabled="!isConnected || !currentRoomId || !!supabaseUser"
                        class="px-3 py-2 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 disabled:from-gray-600 disabled:to-gray-700 text-white rounded-lg transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg shadow-blue-500/25 disabled:shadow-none disabled:cursor-not-allowed"
                        title="Atualizar nome na sala atual">
                    <i data-lucide="check" class="w-4 h-4"></i>
                </button>
            </div>
            <p class="text-xs text-gray-400 mt-1" x-show="!participantName?.trim() && !supabaseUser">Você aparecerá como "Anônimo"</p>
            <p class="text-xs text-green-400 mt-1" x-show="supabaseUser">Nome gerenciado pelo Supabase</p>
        </div>

        <!-- Create Room -->
        <div class="flex-shrink-0 p-4 border-b border-purple-500/30">
            <label class="block text-sm font-medium text-gray-300 mb-2">Nova Sala</label>
            <div class="flex gap-2">
                <div class="flex-1 relative">
                    <i data-lucide="plus-circle" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400"></i>
                    <input x-model="newRoomName" type="text" placeholder="Nome da sala"
                           @keydown.enter="createRoom()"
                           class="w-full pl-10 pr-3 py-2 bg-gray-700 text-white rounded-lg border border-gray-600 focus:border-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-400/20 transition-all">
                </div>
                <button @click="createRoom()" :disabled="!newRoomName.trim()"
                        class="px-3 py-2 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 disabled:from-gray-600 disabled:to-gray-700 text-white rounded-lg transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg shadow-purple-500/25 disabled:shadow-none disabled:cursor-not-allowed">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                </button>
            </div>
        </div>

        <!-- Rooms List -->
        <div class="flex-1 overflow-hidden flex flex-col">
            <div class="flex-1 overflow-y-auto p-4 custom-scrollbar">
                <div class="flex items-center gap-2 mb-3">
                    <span class="text-sm font-medium text-gray-300">Salas Disponíveis</span>
                    <span x-show="rooms.length > 0"
                          class="px-2 py-1 bg-purple-600/20 text-purple-300 rounded-full text-xs"
                          x-text="rooms.length"></span>
                </div>

                <div class="space-y-2">
                    <template x-if="rooms.length === 0">
                        <div class="text-center text-gray-500 py-8">
                            <i data-lucide="inbox" class="w-8 h-8 mx-auto mb-2 opacity-50"></i>
                            <p class="text-sm">Nenhuma sala encontrada</p>
                        </div>
                    </template>

                    <template x-for="room in rooms" :key="room.id">
                        <%- include('../ui/room-card', { isMobile: isMobile || false }) %>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>

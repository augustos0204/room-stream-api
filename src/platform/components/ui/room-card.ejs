<!-- Room Card Component -->
<div class="group relative bg-gradient-to-br from-gray-900/80 to-gray-900/40 backdrop-blur-sm rounded-xl p-4 border transition-all duration-300 hover:shadow-2xl hover:shadow-purple-500/10 hover:-translate-y-0.5"
     :class="currentRoomId === room.id ? 'border-purple-500/60 bg-purple-900/30 shadow-lg shadow-purple-500/20' : 'border-gray-700/50 hover:border-gray-600/80'">
    <!-- Gradient overlay on hover -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/0 to-blue-500/0 group-hover:from-purple-500/5 group-hover:to-blue-500/5 rounded-xl transition-all duration-300"></div>

    <div class="relative flex flex-col gap-3">
        <!-- Header -->
        <div class="flex items-start justify-between gap-3">
            <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1.5">
                    <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-gradient-to-br from-purple-500/20 to-blue-500/20 border border-purple-500/30">
                        <i data-lucide="hash" class="w-4 h-4 text-purple-400"></i>
                    </div>
                    <h3 class="font-semibold text-white text-base truncate" x-text="room.name"></h3>
                </div>
                <p class="text-xs text-gray-500 font-mono truncate" x-text="room.id"></p>
            </div>
        </div>

        <!-- Info and Actions -->
        <div class="flex items-center justify-between gap-3 pt-2 border-t border-gray-700/50">
            <div class="flex items-center gap-2">
                <div class="flex items-center gap-1.5 px-2.5 py-1 bg-gray-800/50 rounded-lg border border-gray-700/50">
                    <i data-lucide="users" class="w-3.5 h-3.5 text-blue-400"></i>
                    <span class="text-xs font-medium text-gray-300" x-text="room.participants.length"></span>
                </div>
            </div>

            <div class="flex items-center gap-2">
                <button @click="<%= isMobile ? "openRoom(room.id, room.name); setMobileSection('chat')" : "openRoom(room.id, room.name)" %>"
                        :disabled="!isConnected"
                        class="px-3 py-1.5 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 disabled:from-gray-600 disabled:to-gray-700 text-white rounded-lg text-xs font-medium transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg shadow-green-500/25 disabled:shadow-none disabled:cursor-not-allowed flex items-center gap-1.5">
                    <span>Abrir</span>
                    <i data-lucide="arrow-right" class="w-3.5 h-3.5"></i>
                </button>
                <button @click="if(confirm(`Tem certeza que deseja excluir a sala '${room.name}'?`)) { deleteRoom(room.id) }"
                        class="p-1.5 bg-gradient-to-r from-red-600/80 to-red-700/80 hover:from-red-600 hover:to-red-700 disabled:from-gray-600 disabled:to-gray-700 text-white rounded-lg text-xs transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg shadow-red-500/20 disabled:shadow-none disabled:cursor-not-allowed flex items-center"
                        title="Excluir sala">
                    <i data-lucide="trash-2" class="w-3.5 h-3.5"></i>
                </button>
            </div>
        </div>
    </div>
</div>

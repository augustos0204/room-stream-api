<!-- Supabase Login Modal Component -->
<% if (features.supabaseAuth) { %>
<div x-show="showSupabaseModal"
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-50 overflow-y-auto"
     style="display: none;">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm" @click="showSupabaseModal = false"></div>

    <!-- Modal -->
    <div class="flex min-h-full items-center justify-center p-4">
        <div @click.stop
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 transform scale-95"
             x-transition:enter-end="opacity-100 transform scale-100"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100 transform scale-100"
             x-transition:leave-end="opacity-0 transform scale-95"
             class="relative dark-glass rounded-2xl shadow-2xl w-full max-w-md p-6 animate-slide-up">

            <!-- Close Button -->
            <button @click="showSupabaseModal = false"
                    class="absolute top-4 right-4 p-1 rounded-lg hover:bg-gray-700/50 transition-colors">
                <i data-lucide="x" class="w-5 h-5 text-gray-400"></i>
            </button>

            <!-- Layout: Usuário Autenticado -->
            <div x-show="supabaseUser" x-transition>
                <!-- Header -->
                <div class="mb-6">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center">
                            <i data-lucide="user-check" class="w-5 h-5 text-white"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-white">Perfil</h2>
                    </div>
                    <p class="text-sm text-gray-400">Você está autenticado via Supabase</p>
                </div>

                <!-- User Profile Card -->
                <div class="bg-gradient-to-br from-green-900/30 to-emerald-900/30 border border-green-500/50 rounded-lg p-4 mb-6">
                    <div class="flex items-start gap-4">
                        <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center flex-shrink-0">
                            <i data-lucide="user" class="w-8 h-8 text-white"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h3 class="text-lg font-semibold text-white mb-1" x-text="supabaseUser?.user_metadata?.name || 'Usuário'"></h3>
                            <p class="text-sm text-green-300 mb-2 break-words" x-text="supabaseUser?.email"></p>
                            <div class="flex items-center gap-2 text-xs text-gray-400">
                                <i data-lucide="shield-check" class="w-3 h-3 text-green-400"></i>
                                <span>ID: <span class="font-mono" x-text="supabaseUser?.id?.substring(0, 8) + '...'"></span></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- User Metadata (if exists) -->
                <div x-show="supabaseUser?.user_metadata && Object.keys(supabaseUser?.user_metadata || {}).length > 0"
                     class="bg-gray-800/50 rounded-lg p-4 mb-6">
                    <h4 class="text-sm font-medium text-gray-300 mb-3 flex items-center gap-2">
                        <i data-lucide="info" class="w-4 h-4"></i>
                        Informações Adicionais
                    </h4>
                    <div class="space-y-2 text-sm">
                        <div x-show="supabaseUser?.user_metadata?.full_name" class="flex justify-between">
                            <span class="text-gray-400">Nome Completo:</span>
                            <span class="text-white" x-text="supabaseUser?.user_metadata?.full_name"></span>
                        </div>
                        <div x-show="supabaseUser?.created_at" class="flex justify-between">
                            <span class="text-gray-400">Criado em:</span>
                            <span class="text-white" x-text="new Date(supabaseUser?.created_at).toLocaleDateString('pt-BR')"></span>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="space-y-3">
                    <button @click="handleSupabaseLogout"
                            class="w-full px-4 py-3 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white rounded-lg transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg shadow-red-500/25 flex items-center justify-center gap-2">
                        <i data-lucide="log-out" class="w-4 h-4"></i>
                        <span>Sair da Conta</span>
                    </button>
                    <button @click="showSupabaseModal = false"
                            class="w-full px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-all">
                        Fechar
                    </button>
                </div>
            </div>

            <!-- Layout: Login Form -->
            <div x-show="!supabaseUser" x-transition>
                <!-- Header -->
                <div class="mb-6">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center">
                            <i data-lucide="user-check" class="w-5 h-5 text-white"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-white">Login Supabase</h2>
                    </div>
                    <p class="text-sm text-gray-400">Faça login para autenticar com JWT</p>
                </div>

                <!-- Login Form -->
                <form @submit.prevent="handleSupabaseLogin" class="space-y-4">
                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                        <div class="relative">
                            <i data-lucide="mail" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400"></i>
                            <input x-model="supabaseEmail"
                                   type="email"
                                   required
                                   placeholder="seu-email@exemplo.com"
                                   class="w-full pl-10 pr-3 py-2 bg-gray-700/50 text-white rounded-lg border border-gray-600 focus:border-green-400 focus:outline-none focus:ring-2 focus:ring-green-400/20 transition-all">
                        </div>
                    </div>

                    <!-- Password -->
                    <div>
                        <label class="block text-sm font-medium text-gray-300 mb-2">Senha</label>
                        <div class="relative">
                            <i data-lucide="lock" class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400"></i>
                            <input x-model="supabasePassword"
                                   type="password"
                                   required
                                   placeholder="Sua senha"
                                   class="w-full pl-10 pr-3 py-2 bg-gray-700/50 text-white rounded-lg border border-gray-600 focus:border-green-400 focus:outline-none focus:ring-2 focus:ring-green-400/20 transition-all">
                        </div>
                    </div>

                    <!-- Error Message -->
                    <div x-show="supabaseError"
                         x-transition
                         class="bg-red-900/30 border border-red-500/50 text-red-300 px-4 py-3 rounded-lg text-sm">
                        <div class="flex items-start gap-2">
                            <i data-lucide="alert-circle" class="w-4 h-4 flex-shrink-0 mt-0.5"></i>
                            <span x-text="supabaseError"></span>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="flex gap-3 pt-2">
                        <button type="button"
                                @click="showSupabaseModal = false"
                                class="flex-1 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-all">
                            Cancelar
                        </button>
                        <button type="submit"
                                :disabled="supabaseLoading"
                                class="flex-1 px-4 py-2 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 disabled:from-gray-600 disabled:to-gray-700 text-white rounded-lg transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg shadow-green-500/25 disabled:shadow-none disabled:cursor-not-allowed flex items-center justify-center gap-2">
                            <span x-show="!supabaseLoading">Entrar</span>
                            <span x-show="supabaseLoading" class="flex items-center gap-2">
                                <div class="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                                Entrando...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% } %>
